<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.candidatecv">
    <data>
        <instance id="candidateCVDc"
                  class="com.company.itpearls.entity.CandidateCV"
                  view="candidateCV-view">
            <loader/>
        </instance>
        <collection id="candidatesDc" class="com.company.itpearls.entity.JobCandidate" view="_minimal">
            <loader id="candidatesLc">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e]]>
                </query>
            </loader>
        </collection>
        <collection id="resumePositionsDc" class="com.company.itpearls.entity.Position" view="_minimal">
            <loader id="resumePositionsLc">
                <query>
                    <![CDATA[select e from itpearls_Position e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="candidateCVDc" width="100%">
            <column width="100%">
                <lookupPickerField id="candidateField" optionsContainer="candidatesDc" property="candidate" width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="resumePositionField" optionsContainer="resumePositionsDc"
                                   property="resumePosition" width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <tabSheet height="50%">
                    <tab id="tabCV" caption="msg://msgCV" margin="true,false,false,false" spacing="true">
                        <richTextArea id="candidateCVRichTextArea" dataContainer="candidateCVDc" property="textCV"
                                      width="100%" height="70%"/>
                    </tab>
                    <tab id="tabLetter" caption="msg://msgLetter" margin="true,false,false,false" spacing="true">
                        <richTextArea id="candidateLetterRichTextArea" dataContainer="candidateCVDc" property="letter"
                                      width="100%"
                                      height="70%"/>
                    </tab>
                </tabSheet>
                <textField id="lintToCloudFileField" property="lintToCloudFile" width="100%"/>
                <dateField id="datePostField" property="datePost"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true" align="TOP_RIGHT">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
