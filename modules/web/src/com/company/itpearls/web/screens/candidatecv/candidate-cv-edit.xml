<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.candidatecv">
    <data>
        <instance id="candidateCVDc"
                  class="com.company.itpearls.entity.CandidateCV"
                  view="candidateCV-view">
            <loader/>
        </instance>
        <collection id="candidatesDc" class="com.company.itpearls.entity.JobCandidate" view="_minimal">
            <loader id="candidatesLc">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="candidateCVDc" width="100%">
            <column width="100%">
                <lookupPickerField id="candidateField" optionsContainer="candidatesDc" property="candidate" width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <dateField id="datePostField" property="datePost" width="50%"/>
                <textArea id="textCVField" property="textCV" rows="5" width="100%" height="50%"/>
                <textArea id="candidateCVTextArea" dataContainer="candidateCVDc" property="lintToCloudFile" width="100%" height="10%"
                          caption="msg://msgUrlCv"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true" align="TOP_RIGHT">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
