<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="candidatesSocialNetworksTable"
        messagesPack="com.company.itpearls.web.screens.candidatessocialnetwork">
    <data readOnly="true">
        <collection id="candidatesSocialNetworksDc"
                    class="com.company.itpearls.entity.CandidatesSocialNetwork"
                    view="candidatesSocialNetwork-view">
            <loader id="candidatesSocialNetworksDl">
                <query>
                    <![CDATA[select e from itpearls_CandidatesSocialNetwork e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="candidatesSocialNetworksTable"
            spacing="true">
        <filter id="filter"
                applyTo="candidatesSocialNetworksTable"
                dataLoader="candidatesSocialNetworksDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="candidatesSocialNetworksTable"
                    width="100%"
                    dataContainer="candidatesSocialNetworksDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="candidate"/>
                <column id="socialNetwork"/>
                <column id="socialNetworkUPL"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="candidatesSocialNetworksTable.create"/>
                <button id="editBtn" action="candidatesSocialNetworksTable.edit"/>
                <button id="removeBtn" action="candidatesSocialNetworksTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
