<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.companydepartament">
    <data>
        <instance id="companyDepartamentDc"
                  class="com.company.itpearls.entity.CompanyDepartament"
                  view="companyDepartament-view">
            <loader/>
        </instance>
        <collection id="companyNamesDc" class="com.company.itpearls.entity.Company" view="_minimal">
            <loader id="companyNamesLc">
                <query>
                    <![CDATA[select e from itpearls_Company e]]>
                </query>
            </loader>
        </collection>
        <collection id="departamentHrDirectorsDc" class="com.company.itpearls.entity.Person" view="_minimal">
            <loader id="departamentHrDirectorsLc">
                <query>
                    <![CDATA[select e from itpearls_Person e]]>
                </query>
            </loader>
        </collection>
        <collection id="departamentDirectorsDc" class="com.company.itpearls.entity.Person" view="_minimal">
            <loader id="departamentDirectorsLc">
                <query>
                    <![CDATA[select e from itpearls_Person e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="companyDepartamentDc">
            <column width="250px">
                <textField id="departamentRuNameField" property="departamentRuName"/>
                <textField id="departamentEnNameField" property="departamentEnName"/>
                <lookupPickerField id="companyNameField" optionsContainer="companyNamesDc" property="companyName">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="departamentHrDirectorField" optionsContainer="departamentHrDirectorsDc"
                                   property="departamentHrDirector">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="departamentDirectorField" optionsContainer="departamentDirectorsDc"
                                   property="departamentDirector">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <textArea id="departamentDescriptionField" property="departamentDescription" rows="5"/>
                <textField id="departamentNumberOfProgrammersField" property="departamentNumberOfProgrammers"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
