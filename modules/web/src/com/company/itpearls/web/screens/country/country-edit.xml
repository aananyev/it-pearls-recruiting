<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.country">
    <data>
        <instance id="countryDc"
                  class="com.company.itpearls.entity.Country"
                  view="country-view">
            <loader/>
            <collection id="countryCountryOfRegionsDc" property="countryOfRegion"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="countryDc">
            <column width="250px">
                <textField id="countryRuNameField" property="countryRuName"/>
                <textField id="countryShortNameField" property="countryShortName"/>
                <textField id="phoneCodeField" property="phoneCode"/>
            </column>
        </form>
        <groupBox spacing="true">
            <table id="countryCountryOfRegionTable" height="200px" width="100%" dataContainer="countryCountryOfRegionsDc">
                <columns>
                    <column id="regionRuName"/>
                    <column id="regionCode"/>
                </columns>
                <actions>
                    <action id="add" type="add"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <buttonsPanel>
                    <button action="countryCountryOfRegionTable.add"/>
                    <button action="countryCountryOfRegionTable.edit"/>
                    <button action="countryCountryOfRegionTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
