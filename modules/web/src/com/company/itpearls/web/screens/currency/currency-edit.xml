<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://currencyEdit.caption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.currency">
    <data>
        <instance id="currencyDc"
                  class="com.company.itpearls.entity.Currency">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="currencyDc">
            <column width="350px">
                <textField id="currencyLongNameField" property="currencyLongName"/>
                <textField id="currencyShortNameField" property="currencyShortName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
