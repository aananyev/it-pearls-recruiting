<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://emailerBrowse.caption"
        focusComponent="emailersTable"
        messagesPack="com.company.itpearls.web.screens.internalemailer">
    <data readOnly="true">
        <collection id="emailersDc"
                    class="com.company.itpearls.entity.InternalEmailer">
            <view extends="internalEmailer-view">
                <property name="fromEmail" view="_local">
                    <property name="fileImageFace" view="_local"/>
                </property>
                <property name="toEmail" view="jobCandidate-view">
                    <property name="fileImageFace" view="_local"/>
                    <property name="personPosition" view="_local"/>
                </property>
            </view>
            <loader id="emailersDl" cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_InternalEmailer e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.fromEmail = :fromEmail</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
        <instance id="jobCandidateDc" class="com.company.itpearls.entity.JobCandidate">
            <view extends="jobCandidate-view"/>
            <loader id="jobCandidateDl">
                <query>select e from itpearls_JobCandidate e
                <condition>
                    <and>
                        <c:jpql>
                            <c:where>e = :jobCandidate</c:where>
                        </c:jpql>
                    </and>
                </condition>
                </query>
            </loader>
        </instance>
        <collection id="signIconsDc" class="com.company.itpearls.entity.SignIcons">
            <view extends="_local">
                <property name="user" view="_local"/>
            </view>
            <loader id="signIconsDl" cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_SignIcons e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="1000"/>
    <layout expand="emailersTable"
            spacing="true">
        <filter id="filter"
                applyTo="emailersTable"
                dataLoader="emailersDl">
            <properties include=".*"/>
        </filter>
        <dataGrid id="emailersTable"
                  width="100%"
                  responsive="true"
                  bodyRowHeight="40px"
                  descriptionAsHtml="true"
                  captionAsHtml="true"
                  dataContainer="emailersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
            </actions>
            <columns>
                <column property="draftEmail"
                        id="draftEmail"
                        width="60px"/>
                <column id="replyInternalEmailerColumn"
                        width="40px"
                        caption="msg://msgReply">
                    <componentRenderer/>
                </column>
                <column id="toEmail"
                        caption="msg://msgToEmail"
                        width="250px"
                        minimumWidth="170px"
                        maximumWidth="250px">
                    <componentRenderer/>
                </column>
                <column id="fromEmail"
                        caption="msg://msgFromEmail"
                        width="250px"
                        minimumWidth="170px"
                        maximumWidth="250px">
                    <componentRenderer/>
                </column>
                <column property="subjectEmail"
                        id="subjectEmail"
                        width="495px"
                        minimumWidth="250px">
                </column>
                <column property="dateCreateEmail"
                        sort="DESCENDING"
                        id="dateCreateEmail"
                        width="140px"
                        maximumWidth="140px"/>
                <column property="dateSendEmail"
                        id="dateSendEmail"
                        width="140px"
                        maximumWidth="140px"/>
                <column id="actionButtonColumn"
                        width="100px"
                        minimumWidth="80px"
                        caption="msg://msgActions">
                    <componentRenderer/>
                </column>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="emailersTable.create"/>
                <button id="editBtn" action="emailersTable.edit"/>
            </buttonsPanel>
        </dataGrid>
        <checkBox id="onlyMyLettersCheckBox"
                  caption="msg://msgOnlyMyEmails"
                  description="msg://msgOnlyMyEmailsDesc"
                  width="AUTO"/>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
