<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://emailerBrowse.caption"
        focusComponent="emailersTable"
        messagesPack="com.company.itpearls.web.screens.internalemailer">
    <data readOnly="true">
        <collection id="emailersDc"
                    class="com.company.itpearls.entity.InternalEmailer">
            <view extends="internalEmailer-view">
                <property name="fromEmail" view="_local">
                    <property name="fileImageFace" view="_local"/>
                </property>
                <property name="toEmail" view="_local">
                    <property name="fileImageFace" view="_local"/>
                </property>
            </view>
            <loader id="emailersDl">
                <query>
                    <![CDATA[select e from itpearls_InternalEmailer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="1000"/>
    <layout expand="emailersTable"
            spacing="true">
        <filter id="filter"
                applyTo="emailersTable"
                dataLoader="emailersDl">
            <properties include=".*"/>
        </filter>
        <dataGrid id="emailersTable"
                  width="100%"
                  dataContainer="emailersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
            </actions>
            <columns>
                <column property="draftEmail"
                        id="draftEmail"
                        width="60px"/>
                <column id="replyInternalEmailerColumn"
                        width="40px"
                        caption="msg://msgReply">
                    <componentRenderer/>
                </column>
                <column id="toEmail"
                        width="250px"
                        minimumWidth="170px"
                        maximumWidth="250px">
                    <componentRenderer/>
                </column>
                <column id="fromEmail"
                        width="250px"
                        minimumWidth="170px"
                        maximumWidth="250px">
                    <componentRenderer/>
                </column>
                <column property="subjectEmail"
                        id="subjectEmail"
                        width="495px"
                        minimumWidth="250px">
                </column>
                <column property="dateCreateEmail"
                        sort="DESCENDING"
                        id="dateCreateEmail"
                        width="140px"
                        maximumWidth="140px"/>
                <column property="dateSendEmail"
                        id="dateSendEmail"
                        width="140px"
                        maximumWidth="140px"/>
                <column id="actionButtonColumn"
                        width="100px"
                        minimumWidth="80px"
                        caption="msg://msgActions">
                    <componentRenderer/>
                </column>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="emailersTable.create"/>
                <button id="editBtn" action="emailersTable.edit"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
