<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://interviewEdit.caption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.interview">
    <data>
        <instance id="interviewDc"
                  class="com.company.itpearls.entity.Interview">
            <view extends="_local">
                <property name="candidate" view="_minimal"/>
                <property name="candidateCV" view="_minimal"/>
                <property name="openPositions" view="_minimal"/>
                <property name="recrutier" view="_minimal"/>
                <property name="researcher" view="_minimal"/>
            </view>
            <loader/>
            <collection id="openPositionsDc" property="openPositions"/>
        </instance>
        <collection id="candidatesDc" class="com.company.itpearls.entity.JobCandidate" view="_minimal">
            <loader id="candidatesDl">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e]]>
                </query>
            </loader>
        </collection>
        <collection id="candidateCVsDc" class="com.company.itpearls.entity.CandidateCV" view="_minimal">
            <loader id="candidateCVsDl">
                <query>
                    <![CDATA[select e from itpearls_CandidateCV e]]>
                </query>
            </loader>
        </collection>
        <collection id="recrutiersDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="recrutiersDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="interviewDc">
                <column width="800px">
                    <dateField id="dateInterviewField" property="dateInterview"/>
                    <lookupPickerField id="candidateField" optionsContainer="candidatesDc" property="candidate">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="candidateCVField" optionsContainer="candidateCVsDc" property="candidateCV">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <textArea id="letterField" property="letter" rows="5"/>
                    <textArea id="letterRequirementsField" property="letterRequirements" rows="5"/>
                    <textArea id="noteField" property="note" rows="5"/>
                    <textField id="salaryMinField" property="salaryMin"/>
                    <textField id="salaryMaxField" property="salaryMax"/>
                    <lookupPickerField id="recrutierField" optionsContainer="recrutiersDc" property="recrutier">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </lookupPickerField>
                    <pickerField id="researcherField" property="researcher">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                </column>
            </form>
            <groupBox id="openPositionsBox" caption="msg://com.company.itpearls.entity/Interview.openPositions">
                <table id="openPositionsTable" dataContainer="openPositionsDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="vacansyName"/>
                    </columns>
                    <buttonsPanel>
                        <button action="openPositionsTable.add"/>
                        <button action="openPositionsTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
