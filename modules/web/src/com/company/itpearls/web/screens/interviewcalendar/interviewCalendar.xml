<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://msgInterviewCal"
        messagesPack="com.company.itpearls.web.screens.interviewcalendar"
        icon="font-icon:CALENDAR">
    <data>
        <collection id="calendarDataDc" class="com.company.itpearls.entity.IteractionList"
                    view="iteractionList-view">
            <loader id="calendarDataDl">
                <query>
                    select e
                    from itpearls_IteractionList e
                    where (e.addDate is not null and e.iteractionType.calendarItem=TRUE)
                    order by e.addDate DESC
                    <condition>
                        <or>
                            <c:jpql>
                                <c:where>
                                    e.iteractionType.iteractionTree.number like :numberInternal
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.iteractionType.iteractionTree.number like :numberExternal
                                </c:where>
                            </c:jpql>
                        </or>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vboxMain" spacing="true">
        <vbox id="vboxMain" width="100%" expand="calendarGroupBox">
            <groupBox id="calendarGroupBox" height="AUTO" width="100%" expand="interviewCalendar"
                      caption="mainMsg://msgInterviewCalendar">
                <hbox id="hBox" width="100%" align="MIDDLE_CENTER">
                    <label value="Month" align="BOTTOM_LEFT" height="100%"/>
                    <datePicker id="monthPicker" width="100%" height="100%"
                                resolution="MONTH"/>
                </hbox>
                <calendar id="interviewCalendar"
                          navigationButtonsVisible="true"
                          timeFormat="24H"
                          caption="100%"
                          height="100%"
                          width="100%"
                          startDate="2020-05-01"
                          endDate="2020-05-31"/>
            </groupBox>
            <groupBox id="filterGroupBox" width="100%" height="AUTO">
                <hbox spacing="true">
                    <checkBox id="huntingCheckBox" caption="msg://huntingCheckBox.msg" align="MIDDLE_LEFT" height="AUTO" width="AUTO"/>
                    <checkBox id="toConpanyCheckBox" caption="msg://toCompanyInterview.msg" align="MIDDLE_LEFT" height="AUTO" width="AUTO"/>
                    <radioButtonGroup id="typeCalendar" orientation="horizontal" align="MIDDLE_RIGHT" height="AUTO" width="AUTO" visible="false"/>
                </hbox>
            </groupBox>
        </vbox>
    </layout>
</window>