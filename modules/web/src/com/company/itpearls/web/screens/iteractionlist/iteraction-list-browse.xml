<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="iteractionListsTable"
        messagesPack="com.company.itpearls.web.screens.iteractionlist">
    <data readOnly="true">
        <collection id="iteractionListsDc"
                    class="com.company.itpearls.entity.IteractionList"
                    view="iteractionList-current-position">
            <loader id="iteractionListsDl">
                <query><![CDATA[select e from itpearls_IteractionList e
order by e.numberIteraction desc]]>
                <condition>
                    <c:jpql>
                        <c:where>e.createdBy like :userName</c:where>
                    </c:jpql>
                </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="iteractionListsTable"
            spacing="true">
        <filter id="filter"
                applyTo="iteractionListsTable"
                dataLoader="iteractionListsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="iteractionListsTable"
                    width="100%"
                    dataContainer="iteractionListsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="numberIteraction" caption="msg://msgNumber" align="CENTER"/>
                <column id="candidate" caption="msg://msgCandidate"/>
                <column id="iteractionType" caption="msg://msgIteractionType"/>
                <column id="dateIteraction" caption="msg://msgDate"/>
                <column id="vacancy" caption="mainMsg://msgVacancy"/>
                <column id="project" caption="msg://msgProject"/>
                <column id="companyDepartment" caption="msg://msgDepartament"/>
                <column id="communicationMethod" caption="mainMsg://msgCommunicationMethod"/>
                <column id="recrutier" caption="msg://msgRecrutier"/>
                <column id="createdBy" caption="mainMsg://msgCreatedBy"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="iteractionListsTable.create"/>
                <button id="editBtn" action="iteractionListsTable.edit"/>
                <button id="removeBtn" action="iteractionListsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <checkBox id="checkBoxShowOnlyMy" caption="mainMsg://msgVisibleOnlyMyCandidate"/>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
