<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.iteractionlist">
    <data>
        <instance id="iteractionListDc"
                  class="com.company.itpearls.entity.IteractionList"
                  view="iteractionList-view">
            <loader id="iteractionListDl"/>
        </instance>
        <collection id="personPositionDc" class="com.company.itpearls.entity.JobCandidate"
                    view="JobCandidate-person-position">
            <loader id="personPositionLc">
                <query><![CDATA[select e from itpearls_JobCandidate e]]></query>
            </loader>
        </collection>
        <collection id="candidatesDc" class="com.company.itpearls.entity.JobCandidate" view="_minimal">
            <loader id="candidatesLc">
                <query><![CDATA[select e from itpearls_JobCandidate e order by e.secondName, e.firstName]]></query>
            </loader>
        </collection>
        <collection id="projectsDc" class="com.company.itpearls.entity.Project" view="project-view">
            <loader id="projectsLc">
                <query><![CDATA[select e from itpearls_Project e order by e.projectName]]></query>
            </loader>
        </collection>
        <collection id="companyDepartmentsDc" class="com.company.itpearls.entity.CompanyDepartament"
                    view="companyDepartament-view">
            <loader id="companyDepartmentsLc">
                <query>
                    <![CDATA[select e from itpearls_CompanyDepartament e
where e.departamentRuName not like '%(не использовать)%'
order by e.departamentRuName]]>
                </query>
            </loader>
        </collection>
        <collection id="iteractionTypesDc" class="com.company.itpearls.entity.Iteraction" view="iteraction-view-button">
            <loader id="iteractionTypesLc">
                <query>
                    <![CDATA[select e from itpearls_Iteraction e order by e.iterationName]]>
                    <condition>
                        <c:jpql>
                            <c:where>
                                e.iteractionTree.number like :number
                            </c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="recrutiersDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="recrutiersLc">
                <query>
                    <![CDATA[select e from sec$User e
order by e.lastName, e.firstName]]>
                </query>
            </loader>
        </collection>
        <collection id="positionsDc" class="com.company.itpearls.entity.Position" view="position-view">
            <loader id="positionsDl">
                <query><![CDATA[select e from itpearls_Position e
order by e.positionRuName]]></query>
            </loader>
        </collection>
        <collection id="vacancyDc" class="com.company.itpearls.entity.OpenPosition" view="openPosition-view">
            <loader id="openPositionsDl">
                <query><![CDATA[select e from itpearls_OpenPosition e order by e.vacansyName]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <groupBox spacing="true">
            <hbox spacing="true">
                <textField id="numberIteractionField" dataContainer="iteractionListDc" property="numberIteraction"
                           editable="false" caption="msg://msgNumber"/>
                <dateField id="dateIteractionField" dataContainer="iteractionListDc" property="dateIteraction"
                           editable="false" caption="msg://msgDate"/>
            </hbox>
        </groupBox>
        <groupBox id="groupBoxIterationData">
            <grid id="gridIterationData" spacing="true" width="100%">
                <columns count="2"/>
                <rows>
                    <row id="row">
                        <lookupPickerField id="candidateField" optionsContainer="candidatesDc"
                                           rowspan="1" colspan="1" caption="msg://msgCandidate" width="100%"
                                           dataContainer="iteractionListDc" property="candidate" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="open" type="picker_open"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="vacancyFiels" caption="mainMsg://msgVacancy" width="100%"
                                           dataContainer="iteractionListDc" optionsContainer="vacancyDc"
                                           property="vacancy">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                    <row>
                        <lookupPickerField id="projectField" optionsContainer="projectsDc"
                                           caption="msg://msgProject" width="100%" dataContainer="iteractionListDc"
                                           property="project">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="companyDepartmentField" optionsContainer="companyDepartmentsDc"
                                           caption="msg://msgDepartament" width="100%" editable="true"
                                           dataContainer="iteractionListDc" property="companyDepartment">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                    <row>
                        <lookupPickerField id="iteractionTypeField" optionsContainer="iteractionTypesDc"
                                           caption="msg://msgIteractionType" width="100%"
                                           dataContainer="iteractionListDc" property="iteractionType">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                        <buttonsPanel id="buttonsPanelCallAction" width="100%" align="BOTTOM_CENTER">
                            <vbox>
                                <button id="buttonCallAction" invoke="callActionEntity" align="MIDDLE_CENTER" width="100%"/>
                                <textField id="addString" dataContainer="iteractionListDc" property="addString" width="100%"/>
                                <dateField id="addDate" dataContainer="iteractionListDc" property="addDate" width="100%" />
                                <textField id="addInteger" dataContainer="iteractionListDc" property="addInteger" width="100%"/>
                            </vbox>
                        </buttonsPanel>
                    </row>
                    <row>
                        <textField id="communicationMethodField" width="100%"
                                   caption="msg://msgCommunicationMethod" dataContainer="iteractionListDc"
                                   property="communicationMethod"/>
                        <lookupPickerField id="recrutierField" optionsContainer="recrutiersDc"
                                           caption="msg://msgRecrutier" width="100%" dataContainer="iteractionListDc"
                                           property="recrutier">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                </rows>
            </grid>
            <textArea id="commentField" property="comment" rows="3" width="100%" dataContainer="iteractionListDc"
                      caption="msg://msgComment"/>
        </groupBox>
        <form id="form" dataContainer="iteractionListDc" width="100%">
            <column width="250px">
            </column>
        </form>
        <hbox id="editActions" spacing="true" align="TOP_RIGHT">
            <button id="buttonAddNewIteraction" invoke="addNewIteraction" caption="msg://msgAddNewIteraction"
                    icon="COPY"/>
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
