<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.iteractionlist"
        icon="REORDER">
    <data>
        <instance id="iteractionListDc"
                  class="com.company.itpearls.entity.IteractionList">
            <view extends="_local">
                <property name="candidate" view="_minimal"/>
                <property name="iteractionType" view="_minimal"/>
                <property name="vacancy" view="_minimal"/>
                <property name="recrutier" view="_minimal"/>
            </view>
            <loader id="iteractionListDl"/>
        </instance>
        <collection id="iteractionTypesDc"
                    class="com.company.itpearls.entity.Iteraction">
            <view extends="_local">
            </view>
            <loader id="iteractionTypesLc"
                    cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_Iteraction e order by e.iterationName]]>
                    <condition>
                        <c:jpql>
                            <c:where>
                                e.iteractionTree.number like :number
                            </c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="candidatesDc"
                    class="com.company.itpearls.entity.JobCandidate">
            <view extends="_local">
                <property name="personPosition" view="_local"/>
            </view>
            <loader id="candidatesLc"
                    cacheable="true">
                <query><![CDATA[select e from itpearls_JobCandidate e order by e.secondName, e.firstName]]></query>
            </loader>
        </collection>
        <collection id="vacancyDc"
                    class="com.company.itpearls.entity.OpenPosition">
            <view extends="_local">
                <property name="positionType" view="_local"/>
                <property name="projectName" view="_local">
                    <property name="projectDepartment" view="_local">
                        <property name="companyName" view="_local"/>
                    </property>
                </property>
            </view>
            <loader id="openPositionsDl"
                    cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_OpenPosition e
                                order by e.openClose, e.vacansyName]]>
                    <condition>
                        <c:jpql>
                            <c:where>
                                e.companyDepartament = :departament
                            </c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="usersDc"
                    class="com.haulmont.cuba.security.entity.User"
                    view="_local">
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from sec$User e order by e.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="700"
                modal="true"
                width="900"/>
    <layout expand="editActions"
            spacing="true">
        <groupBox spacing="true">
            <hbox spacing="true"
                  width="100%">
                <hbox width="40%">
                    <textField id="numberIteractionField"
                               dataContainer="iteractionListDc"
                               property="numberIteraction"
                               editable="false"
                               caption="msg://msgNumber"
                               width="80%"
                               align="MIDDLE_CENTER"/>
                    <dateField id="dateIteractionField"
                               dataContainer="iteractionListDc"
                               property="dateIteraction"
                               editable="false"
                               caption="msg://msgDate"/>
                </hbox>
                <hbox>
                    <label id="companyLabel"
                           align="MIDDLE_LEFT"
                           htmlEnabled="true"/>
                    <label id="ratingLabel"
                           width="100%"
                           align="MIDDLE_RIGHT"/>
                </hbox>
            </hbox>
        </groupBox>
        <groupBox id="groupBoxIterationData">
            <grid id="gridIterationData"
                  spacing="true"
                  width="100%">
                <columns count="2"/>
                <rows>
                    <row id="rating">
                        <label width="100%"
                               align="MIDDLE_RIGHT"/>
                        <lookupField id="ratingField"
                                     required="true"
                                     align="MIDDLE_RIGHT"
                                     caption="msg://msgRating"
                                     dataContainer="iteractionListDc"
                                     property="rating"
                                     description="msg://msgRatingDecription"
                                     width="50%"/>
                    </row>
                    <row id="row">
                        <lookupPickerField id="candidateField"
                                           optionsContainer="candidatesDc"
                                           rowspan="1"
                                           colspan="1"
                                           caption="msg://msgCandidate"
                                           width="100%"
                                           dataContainer="iteractionListDc"
                                           property="candidate"
                                           required="true">
                            <actions>
                                <action id="lookup"
                                        type="picker_lookup"/>
                                <action id="open"
                                        type="picker_open"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="vacancyFiels"
                                           caption="mainMsg://msgVacancy"
                                           width="100%"
                                           dataContainer="iteractionListDc"
                                           optionsContainer="vacancyDc"
                                           property="vacancy">
                            <actions>
                                <action id="lookup"
                                        type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                    <row>
                        <lookupPickerField id="iteractionTypeField"
                                           optionsContainer="iteractionTypesDc"
                                           caption="msg://msgIteractionType"
                                           width="100%"
                                           dataContainer="iteractionListDc"
                                           property="iteractionType"
                                           colspan="1">
                            <actions>
                                <action id="lookup"
                                        type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                        <buttonsPanel id="buttonsPanelCallAction"
                                      width="100%"
                                      align="BOTTOM_CENTER">
                            <vbox>
                                <button id="buttonCallAction"
                                        invoke="callActionEntity"
                                        align="BOTTOM_CENTER"
                                        width="100%"/>
                                <textField id="addString"
                                           dataContainer="iteractionListDc"
                                           property="addString"
                                           width="100%"/>
                                <dateField id="addDate" dataContainer="iteractionListDc"
                                           property="addDate"
                                           width="100%"/>
                                <textField id="addInteger"
                                           dataContainer="iteractionListDc"
                                           property="addInteger"
                                           width="100%"/>
                            </vbox>
                        </buttonsPanel>
                    </row>
                    <row>
                        <textField id="communicationMethodField"
                                   width="100%"
                                   caption="msg://msgCommunicationMethod"
                                   dataContainer="iteractionListDc"
                                   property="communicationMethod"/>
                        <lookupPickerField id="recrutierField"
                                           caption="msg://msgRecrutier"
                                           width="100%"
                                           dataContainer="iteractionListDc"
                                           property="recrutier"
                                           optionsContainer="usersDc">
                            <actions>
                                <action id="lookup"
                                        type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                </rows>
            </grid>
            <textArea id="commentField"
                      property="comment"
                      rows="3"
                      width="100%"
                      dataContainer="iteractionListDc"
                      caption="msg://msgComment"
                      height="150pt"/>
        </groupBox>
        <form id="form"
              dataContainer="iteractionListDc"
              width="100%">
            <column width="250px">
            </column>
        </form>
        <hbox id="editActions"
              spacing="true"
              align="BOTTOM_RIGHT">
            <button id="subscribeButton"
                    invoke="onButtonSubscribeClick"
                    caption="mainMsg://msgSubscribe"
                    icon="BELL"/>
            <!--            <button id="buttonAddNewIteraction"
                                invoke="addNewIteraction"
                                caption="msg://msgAddNewIteraction"
                                icon="COPY"/> -->
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
