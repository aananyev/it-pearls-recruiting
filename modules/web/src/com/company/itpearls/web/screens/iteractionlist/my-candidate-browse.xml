<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="iteractionListsTable"
        messagesPack="com.company.itpearls.web.screens.iteractionlist">
    <data readOnly="true">
        <collection id="iteractionListsDc"
                    class="com.company.itpearls.entity.IteractionList"
                    view="iteractionList-view">
            <loader id="iteractionListsDl">
                <query>
                    <![CDATA[select e from itpearls_IteractionList e order by e.candidate.fullName, e.dateIteraction]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="iteractionListsTable"
            spacing="true">
        <filter id="filter"
                applyTo="iteractionListsTable"
                dataLoader="iteractionListsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="iteractionListsTable"
                    width="100%"
                    dataContainer="iteractionListsDc">
            <actions>
            </actions>
            <columns>
                <group>
                    <column id="candidate"/>
                    <column id="vacancy.cityPosition.cityRuName" align="LEFT"/>
                    <column id="vacancy.vacansyName" align="LEFT"/>
                </group>
                <column id="iteractionType" sortable="false"/>
                <column id="dateIteraction" sortable="false"/>
                <column id="recrutier" sortable="false"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
