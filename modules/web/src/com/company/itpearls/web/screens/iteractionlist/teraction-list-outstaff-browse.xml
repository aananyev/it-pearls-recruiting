<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        extends="com/company/itpearls/web/screens/iteractionlist/iteraction-list-browse.xml">
    <data>
        <collection>
            <view extends="_local">
                <property name="candidate" view="_local">
                    <property name="candidateCv" view="_minimal"/>
                    <property name="socialNetwork" view="_minimal"/>
                    <property name="positionList" view="_minimal"/>
                    <property name="createdBy"/>
                    <property name="createTs"/>
                    <property name="updatedBy"/>
                    <property name="updateTs"/>
                </property>
                <property name="iteractionType" view="_minimal">
                    <property name="pic"/>
                    <property name="outstaffingSign"/>
                </property>
                <property name="recrutier" view="_minimal"/>
                <property name="vacancy" view="_minimal">
                    <property name="projectName" view="_minimal"/>
                </property>
            </view>
            <loader>
                <query>
                    <![CDATA[select e from itpearls_IteractionList e
                    where (e.iteractionType in
                    (select f from itpearls_Iteraction f where f.outstaffingSign = true))
                    order by e.numberIteraction desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <dataGrid height="100%"/>
    </layout>
</window>
