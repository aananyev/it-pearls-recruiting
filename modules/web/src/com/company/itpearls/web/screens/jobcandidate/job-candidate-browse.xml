<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="jobCandidatesTable"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate"
                    view="jobCandidate-view">
            <loader id="jobCandidatesDl">
                <query><![CDATA[select e from itpearls_JobCandidate e
order by e.secondName, e.firstName]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="jobCandidatesTable"
            spacing="true">
        <filter id="filter"
                applyTo="jobCandidatesTable"
                dataLoader="jobCandidatesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="jobCandidatesTable"
                    width="100%"
                    dataContainer="jobCandidatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="secondName" caption="msg://msgSecondName"/>
                <column id="firstName" caption="mainMsg://msgFirstName"/>
                <column id="middleName" caption="msg://msgMiddleName"/>
                <column id="personPosition" caption="msg://msgPersonPosition"/>
                <column id="currentCompany" caption="msg://msgPersonPosition"/>
                <column id="positionCountry" caption="mainMsg://msgCountry"/>
                <column id="cityOfResidence" caption="msg://msgCityOfResidence"/>
                <column id="email" caption="msg://msgEmail"/>
                <column id="phone" caption="msg://msgPhone"/>
                <column id="skypeName" caption="msg://msgSkypeAccaunt"/>
                <column id="createBy"/>
                <column id="createTs"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="jobCandidatesTable.create"/>
                <button id="editBtn" action="jobCandidatesTable.edit"/>
                <button id="removeBtn" action="jobCandidatesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
