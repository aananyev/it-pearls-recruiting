<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="jobCandidatesTable"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate"
                    view="jobCandidate-view">
            <loader id="jobCandidatesDl">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="jobCandidatesTable"
            spacing="true">
        <filter id="filter"
                applyTo="jobCandidatesTable"
                dataLoader="jobCandidatesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="jobCandidatesTable"
                    width="100%"
                    dataContainer="jobCandidatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="middleName"/>
                <column id="secondName"/>
                <column id="birdhDate"/>
                <column id="email"/>
                <column id="phone"/>
                <column id="skypeName"/>
                <column id="telegramName"/>
                <column id="wiberName"/>
                <column id="whatsupName"/>
                <column id="positionCountry"/>
                <column id="personPosition"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="jobCandidatesTable.create"/>
                <button id="editBtn" action="jobCandidatesTable.edit"/>
                <button id="removeBtn" action="jobCandidatesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
