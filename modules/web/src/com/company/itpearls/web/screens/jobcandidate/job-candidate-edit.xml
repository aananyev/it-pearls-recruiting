<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data>
        <instance id="jobCandidateDc"
                  class="com.company.itpearls.entity.JobCandidate"
                  view="jobCandidate-view">
            <loader/>
            <collection id="jobCandidateIteractionListsDc" property="iteractionList"/>
            <collection id="jobCandidateSkillListsDc" property="skillList"/>
            <collection id="jobCandidateJobHistoriesDc" property="jobHistory"/>
        </instance>
        <collection id="personPositionsDc" class="com.company.itpearls.entity.Position" view="_minimal">
            <loader id="personPositionsLc">
                <query>
                    <![CDATA[select e from itpearls_Position e]]>
                </query>
            </loader>
        </collection>
        <collection id="currentCompaniesDc" class="com.company.itpearls.entity.Company" view="_minimal">
            <loader id="currentCompaniesLc">
                <query>
                    <![CDATA[select e from itpearls_Company e]]>
                </query>
            </loader>
        </collection>
        <collection id="positionCountriesDc" class="com.company.itpearls.entity.Country" view="_minimal">
            <loader id="positionCountriesLc">
                <query>
                    <![CDATA[select e from itpearls_Country e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <tabSheet/>
    <layout expand="editActions" spacing="true">
        <tabSheet>
            <tab id="tabCandidate" caption="msg://candidate" margin="true,false,false,false" spacing="true">
                <groupBox spacing="true">
                    <textField id="firstNameField" dataContainer="jobCandidateDc" property="firstName" width="50%"
                               caption="msg://msgFirstName"/>
                    <textField id="middleNameField" dataContainer="jobCandidateDc" property="middleName" width="50%"
                               caption="msg://msgMiddleName"/>
                    <textField id="secondNameField" dataContainer="jobCandidateDc" property="secondName" width="50%"
                               caption="msg://msgSecondName"/>
                    <lookupPickerField id="personPositionField" optionsContainer="personPositionsDc"
                                       dataContainer="jobCandidateDc" property="personPosition" width="50%"
                                       caption="msg://msgPersonPosition">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="currentCompanyField" optionsContainer="currentCompaniesDc"
                                       dataContainer="jobCandidateDc" property="currentCompany" width="50%"
                                       caption="msg://msgCorrentCompany">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField dataContainer="jobCandidateDc" property="cityOfResidence" width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                        </actions>
                    </lookupPickerField>
                    <dateField id="birdhDateField" dataContainer="jobCandidateDc" property="birdhDate" width="50%"
                               caption="msg://msgBirthDate"/>
                    <textField id="emailField" dataContainer="jobCandidateDc" property="email" width="50%"/>
                    <textField id="phoneField" dataContainer="jobCandidateDc" property="phone" width="50%"/>
                    <textField id="skypeNameField" dataContainer="jobCandidateDc" property="skypeName" width="50%"/>
                    <textField id="telegramNameField" dataContainer="jobCandidateDc" property="telegramName"
                               width="50%"/>
                    <textField id="wiberNameField" dataContainer="jobCandidateDc" property="wiberName" width="50%"/>
                    <textField id="whatsupNameField" dataContainer="jobCandidateDc" property="whatsupName" width="50%"/>
                    <lookupPickerField id="positionCountryField" optionsContainer="positionCountriesDc"
                                       dataContainer="jobCandidateDc" property="positionCountry" width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                </groupBox>
            </tab>
            <tab id="tabIteraction" caption="msg://candidateIteration" margin="true,false,false,false" spacing="true">
                <groupBox spacing="true">
                    <table id="jobCandidateIteractionListTable" dataContainer="jobCandidateIteractionListsDc"
                           width="100%">
                        <columns>
                            <column id="numberIteraction"/>
                            <column id="dateIteraction"/>
                            <column id="communicationMethod"/>
                            <column id="comment"/>
                        </columns>
                        <actions>
                            <action id="add" type="add"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button id="addButton" action="jobCandidateIteractionListTable.add"/>
                            <button id="editButton" action="jobCandidateIteractionListTable.edit"/>
                            <button id="removeButton" action="jobCandidateIteractionListTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </tab>
            <tab id="tabSkills" caption="msg://msgSkills" margin="true,false,false,false" spacing="true">
                <groupBox spacing="true">
                    <lookupPickerField id="jobCandidateSpecialisationField" dataContainer="jobCandidateDc" property="specialisation"
                                       caption="msg://msgSpecialisation" width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="open" type="picker_open"/>
                        </actions>
                    </lookupPickerField>
                    <groupBox spacing="true">
                        <groupTable id="jobCandidateSkillListTable" height="200px" width="100%" dataContainer="jobCandidateSkillListsDc">
                            <columns>
                                <column id="skillName"/>
                            </columns>
                            <actions>
                                <action id="add" type="add"/>
                                <action id="edit" type="edit"/>
                                <action id="remove" type="remove"/>
                            </actions>
                            <buttonsPanel>
                                <button id="addButton_1" action="jobCandidateSkillListTable.add"/>
                                <button id="editButton_1" action="jobCandidateSkillListTable.edit"/>
                                <button id="removeButton_1" action="jobCandidateSkillListTable.remove"/>
                            </buttonsPanel>
                        </groupTable>
                    </groupBox>
                </groupBox>
            </tab>
            <tab id="tabJobHistory" caption="msg://msgTabJobHistory" margin="true,false,false,false" spacing="true">
                <groupBox spacing="true">
                    <table id="jobCandidateJobHistoryTable" height="200px" width="100%" dataContainer="jobCandidateJobHistoriesDc">
                        <columns>
                            <column id="currentCompany"/>
                            <column id="currentPosition"/>
                            <column id="dateNewsPosition"/>
                        </columns>
                        <actions>
                            <action id="add" type="add"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button id="addHistoryButton" action="jobCandidateJobHistoryTable.add"/>
                            <button id="editHistoryButton" action="jobCandidateJobHistoryTable.edit"/>
                            <button id="removeHistoryButton" action="jobCandidateJobHistoryTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </tab>
        </tabSheet>
        <form id="form" dataContainer="jobCandidateDc">
            <column width="250px">
            </column>
        </form>
        <hbox id="editActions" spacing="true" align="BOTTOM_RIGHT">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
