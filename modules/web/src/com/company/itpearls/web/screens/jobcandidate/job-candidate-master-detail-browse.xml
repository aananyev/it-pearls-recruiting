<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="table"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data>
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate"
                    view="jobCandidate-view">
            <loader id="jobCandidatesDl">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e]]>
                </query>
            </loader>
        </collection>
        <instance id="jobCandidateDc"
                  class="com.company.itpearls.entity.JobCandidate"
                  view="jobCandidate-view">
            <loader/>
            <collection id="iteractionListDc" property="iteractionList"/>
            <collection id="jobHistoryDc" property="jobHistory"/>
            <collection id="socialNetworkDc" property="socialNetwork"/>
            <collection id="candidateCvDc" property="candidateCv"/>
            <collection id="skillsDc" property="skills"/>
        </instance>
        <collection id="currentCompaniesDc" class="com.company.itpearls.entity.Company" view="_minimal">
            <loader id="currentCompaniesDl">
                <query>
                    <![CDATA[select e from itpearls_Company e]]>
                </query>
            </loader>
        </collection>
        <collection id="personPositionsDc" class="com.company.itpearls.entity.Position" view="_minimal">
            <loader id="personPositionsDl">
                <query>
                    <![CDATA[select e from itpearls_Position e]]>
                </query>
            </loader>
        </collection>
        <collection id="cityOfResidencesDc" class="com.company.itpearls.entity.City" view="_minimal">
            <loader id="cityOfResidencesDl">
                <query>
                    <![CDATA[select e from itpearls_City e]]>
                </query>
            </loader>
        </collection>
        <collection id="positionCountriesDc" class="com.company.itpearls.entity.Country" view="_minimal">
            <loader id="positionCountriesDl">
                <query>
                    <![CDATA[select e from itpearls_Country e]]>
                </query>
            </loader>
        </collection>
        <collection id="specialisationsDc" class="com.company.itpearls.entity.Specialisation" view="_minimal">
            <loader id="specialisationsDl">
                <query>
                    <![CDATA[select e from itpearls_Specialisation e]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="jobCandidatesDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="jobCandidatesDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                        <action id="excel" type="excel"/>
                    </actions>
                    <columns>
                        <column id="fullName"/>
                        <column id="currentCompany"/>
                        <column id="personPosition"/>
                        <column id="birdhDate"/>
                        <column id="cityOfResidence"/>
                        <column id="positionCountry"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                        <button id="excelBtn" action="table.excel"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="tabSheetBox" spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet" height="100%">
                        <tab id="mainTab" caption="msg://mainTab" margin="true">
                            <scrollBox id="fieldGroupBox"
                                       height="100%">
                                <form id="form" dataContainer="jobCandidateDc">
                                    <column width="250px">
                                        <textField id="firstNameField" property="firstName"/>
                                        <textField id="middleNameField" property="middleName"/>
                                        <textField id="secondNameField" property="secondName"/>
                                        <textField id="fullNameField" property="fullName"/>
                                        <lookupPickerField id="currentCompanyField"
                                                           optionsContainer="currentCompaniesDc"
                                                           property="currentCompany">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                            </actions>
                                        </lookupPickerField>
                                        <lookupPickerField id="personPositionField" optionsContainer="personPositionsDc"
                                                           property="personPosition">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                            </actions>
                                        </lookupPickerField>
                                        <lookupPickerField id="cityOfResidenceField"
                                                           optionsContainer="cityOfResidencesDc"
                                                           property="cityOfResidence">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                            </actions>
                                        </lookupPickerField>
                                        <dateField id="birdhDateField" property="birdhDate"/>
                                        <textField id="emailField" property="email"/>
                                        <textField id="phoneField" property="phone"/>
                                        <textField id="skypeNameField" property="skypeName"/>
                                        <textField id="telegramNameField" property="telegramName"/>
                                        <textField id="wiberNameField" property="wiberName"/>
                                        <textField id="whatsupNameField" property="whatsupName"/>
                                        <lookupPickerField id="positionCountryField"
                                                           optionsContainer="positionCountriesDc"
                                                           property="positionCountry">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                            </actions>
                                        </lookupPickerField>
                                        <lookupPickerField id="specialisationField" optionsContainer="specialisationsDc"
                                                           property="specialisation">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                            </actions>
                                        </lookupPickerField>
                                        <pickerField id="skillTreeField" property="skillTree">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                                <action id="clear" type="picker_clear"/>
                                            </actions>
                                        </pickerField>
                                        <pickerField id="openPositionField" property="openPosition">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                                <action id="clear" type="picker_clear"/>
                                            </actions>
                                        </pickerField>
                                        <textField id="statusField" property="status"/>
                                    </column>
                                </form>
                            </scrollBox>
                        </tab>
                        <tab id='iteractionListTab'
                             caption='msg://com.company.itpearls.entity/JobCandidate.iteractionList'
                             margin='true,false,false,false'>
                            <table id="iteractionListTable" dataContainer="iteractionListDc" width="100%"
                                   height="200px">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="numberIteraction"/>
                                    <column id="dateIteraction"/>
                                    <column id="communicationMethod"/>
                                    <column id="comment"/>
                                    <column id="recrutierName"/>
                                    <column id="addType"/>
                                    <column id="addDate"/>
                                    <column id="addString"/>
                                    <column id="addInteger"/>
                                    <column id="candidate"/>
                                    <column id="currentJobPosition"/>
                                    <column id="vacancy"/>
                                    <column id="project"/>
                                    <column id="companyDepartment"/>
                                    <column id="iteractionType"/>
                                    <column id="recrutier"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="iteractionListTable.create"/>
                                    <button action="iteractionListTable.edit"/>
                                    <button action="iteractionListTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id='jobHistoryTab' caption='msg://com.company.itpearls.entity/JobCandidate.jobHistory'
                             margin='true,false,false,false'>
                            <table id="jobHistoryTable" dataContainer="jobHistoryDc" width="100%" height="200px">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="candidate"/>
                                    <column id="currentPosition"/>
                                    <column id="currentCompany"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="jobHistoryTable.create"/>
                                    <button action="jobHistoryTable.edit"/>
                                    <button action="jobHistoryTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id='socialNetworkTab'
                             caption='msg://com.company.itpearls.entity/JobCandidate.socialNetwork'
                             margin='true,false,false,false'>
                            <table id="socialNetworkTable" dataContainer="socialNetworkDc" width="100%" height="200px">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="networkName"/>
                                    <column id="networkURLS"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="socialNetworkTable.create"/>
                                    <button action="socialNetworkTable.edit"/>
                                    <button action="socialNetworkTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id='candidateCvTab' caption='msg://com.company.itpearls.entity/JobCandidate.candidateCv'
                             margin='true,false,false,false'>
                            <table id="candidateCvTable" dataContainer="candidateCvDc" width="100%" height="200px">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="candidate"/>
                                    <column id="resumePosition"/>
                                    <column id="toVacancy"/>
                                    <column id="owner"/>
                                    <column id="lintToCloudFile"/>
                                    <column id="fileCV"/>
                                    <column id="originalFileCV"/>
                                    <column id="createTs"/>
                                    <column id="createdBy"/>
                                    <column id="updateTs"/>
                                    <column id="updatedBy"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="candidateCvTable.create"/>
                                    <button action="candidateCvTable.edit"/>
                                    <button action="candidateCvTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                        <tab id='skillsTab' caption='msg://com.company.itpearls.entity/JobCandidate.skills'
                             margin='true,false,false,false'>
                            <table id="skillsTable" dataContainer="skillsDc" width="100%" height="200px">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="skillName"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="skillsTable.create"/>
                                    <button action="skillsTable.edit"/>
                                    <button action="skillsTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
