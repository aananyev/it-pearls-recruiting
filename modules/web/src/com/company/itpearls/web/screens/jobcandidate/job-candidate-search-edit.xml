<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data>
        <instance id="jobCandidateDc"
                  class="com.company.itpearls.entity.JobCandidate"
                  view="jobCandidate-view">
            <loader/>
            <collection id="iteractionListDc" property="iteractionList"/>
            <collection id="jobHistoryDc" property="jobHistory"/>
            <collection id="socialNetworkDc" property="socialNetwork"/>
            <collection id="candidateCvDc" property="candidateCv"/>
            <collection id="skillsDc" property="skills"/>
        </instance>
        <collection id="currentCompaniesDc" class="com.company.itpearls.entity.Company" view="_minimal">
            <loader id="currentCompaniesLc">
                <query>
                    <![CDATA[select e from itpearls_Company e]]>
                </query>
            </loader>
        </collection>
        <collection id="personPositionsDc" class="com.company.itpearls.entity.Position" view="_minimal">
            <loader id="personPositionsLc">
                <query>
                    <![CDATA[select e from itpearls_Position e]]>
                </query>
            </loader>
        </collection>
        <collection id="cityOfResidencesDc" class="com.company.itpearls.entity.City" view="_minimal">
            <loader id="cityOfResidencesLc">
                <query>
                    <![CDATA[select e from itpearls_City e]]>
                </query>
            </loader>
        </collection>
        <collection id="positionCountriesDc" class="com.company.itpearls.entity.Country" view="_minimal">
            <loader id="positionCountriesLc">
                <query>
                    <![CDATA[select e from itpearls_Country e]]>
                </query>
            </loader>
        </collection>
        <collection id="specialisationsDc" class="com.company.itpearls.entity.Specialisation" view="_minimal">
            <loader id="specialisationsLc">
                <query>
                    <![CDATA[select e from itpearls_Specialisation e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="jobCandidateDc">
                <column width="250px">
                    <textField id="firstNameField" property="firstName"/>
                    <textField id="middleNameField" property="middleName"/>
                    <textField id="secondNameField" property="secondName"/>
                    <textField id="fullNameField" property="fullName"/>
                    <lookupPickerField id="currentCompanyField" optionsContainer="currentCompaniesDc"
                                       property="currentCompany">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="personPositionField" optionsContainer="personPositionsDc"
                                       property="personPosition">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="cityOfResidenceField" optionsContainer="cityOfResidencesDc"
                                       property="cityOfResidence">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <dateField id="birdhDateField" property="birdhDate"/>
                    <textField id="emailField" property="email"/>
                    <textField id="phoneField" property="phone"/>
                    <textField id="skypeNameField" property="skypeName"/>
                    <textField id="telegramNameField" property="telegramName"/>
                    <textField id="wiberNameField" property="wiberName"/>
                    <textField id="whatsupNameField" property="whatsupName"/>
                    <lookupPickerField id="positionCountryField" optionsContainer="positionCountriesDc"
                                       property="positionCountry">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="specialisationField" optionsContainer="specialisationsDc"
                                       property="specialisation">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <pickerField id="skillTreeField" property="skillTree">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="openPositionField" property="openPosition">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                </column>
            </form>
            <groupBox id="iteractionListBox" caption="msg://com.company.itpearls.entity/JobCandidate.iteractionList">
                <table id="iteractionListTable" dataContainer="iteractionListDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="numberIteraction"/>
                        <column id="dateIteraction"/>
                        <column id="communicationMethod"/>
                        <column id="comment"/>
                        <column id="recrutierName"/>
                        <column id="candidate"/>
                        <column id="currentJobPosition"/>
                        <column id="vacancy"/>
                        <column id="project"/>
                        <column id="companyDepartment"/>
                        <column id="iteractionType"/>
                        <column id="recrutier"/>
                    </columns>
                    <buttonsPanel>
                        <button action="iteractionListTable.create"/>
                        <button action="iteractionListTable.edit"/>
                        <button action="iteractionListTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="jobHistoryBox" caption="msg://com.company.itpearls.entity/JobCandidate.jobHistory">
                <table id="jobHistoryTable" dataContainer="jobHistoryDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="candidate"/>
                        <column id="currentPosition"/>
                        <column id="currentCompany"/>
                    </columns>
                    <buttonsPanel>
                        <button action="jobHistoryTable.create"/>
                        <button action="jobHistoryTable.edit"/>
                        <button action="jobHistoryTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="socialNetworkBox" caption="msg://com.company.itpearls.entity/JobCandidate.socialNetwork">
                <table id="socialNetworkTable" dataContainer="socialNetworkDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="networkName"/>
                        <column id="networkURLS"/>
                    </columns>
                    <buttonsPanel>
                        <button action="socialNetworkTable.create"/>
                        <button action="socialNetworkTable.edit"/>
                        <button action="socialNetworkTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="candidateCvBox" caption="msg://com.company.itpearls.entity/JobCandidate.candidateCv">
                <table id="candidateCvTable" dataContainer="candidateCvDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="candidate"/>
                        <column id="resumePosition"/>
                        <column id="toVacancy"/>
                        <column id="owner"/>
                        <column id="lintToCloudFile"/>
                        <column id="fileCV"/>
                        <column id="originalFileCV"/>
                        <column id="createdBy"/>
                    </columns>
                    <buttonsPanel>
                        <button action="candidateCvTable.create"/>
                        <button action="candidateCvTable.edit"/>
                        <button action="candidateCvTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="skillsBox" caption="msg://com.company.itpearls.entity/JobCandidate.skills">
                <table id="skillsTable" dataContainer="skillsDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="skillName"/>
                    </columns>
                    <buttonsPanel>
                        <button action="skillsTable.create"/>
                        <button action="skillsTable.edit"/>
                        <button action="skillsTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
