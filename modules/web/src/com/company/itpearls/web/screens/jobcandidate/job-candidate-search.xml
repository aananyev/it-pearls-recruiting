<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="jobCandidatesTable"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate"
                    view="jobCandidate-view-search">
            <loader id="jobCandidatesDl">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e
order by e.fullName]]>
                </query>
            </loader>
        </collection>
        <collection id="positionsDc" class="com.company.itpearls.entity.Position" view="position-view">
            <loader id="positionsDl">
                <query>
                    <![CDATA[select e from itpearls_Position e ]]>
                </query>
            </loader>
        </collection>
        <collection id="companiesDc" class="com.company.itpearls.entity.Company" view="company-view-search">
            <loader id="companiesDl">
                <query>
                    <![CDATA[select e from itpearls_Company e ]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="jobCandidatesTable"
            spacing="true">
        <groupBox spacing="true">
            <vbox spacing="true">
                <lookupPickerField width="100%" optionsContainer="positionsDc" dataContainer="jobCandidatesDc"
                                   property="openPosition">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <hbox spacing="true" width="100%">
                    <dateField/>
                    <dateField/>
                </hbox>
                <grid spacing="true" width="100%">
                    <columns count="4"/>
                    <rows>
                        <row>
                            <checkBox caption="msg://msgInverse" align="MIDDLE_LEFT"/>
                            <lookupField dataContainer="jobCandidatesDc" optionsContainer="companiesDc"
                                         property="cityOfResidence" width="100%" align="MIDDLE_LEFT"/>
                            <checkBox caption="msg://msgInverse" align="MIDDLE_LEFT"/>
                            <lookupField dataContainer="jobCandidatesDc" optionsContainer="companiesDc"
                                         property="cityOfResidence" width="100%" align="MIDDLE_LEFT"/>
                        </row>
                        <row>
                            <checkBox caption="msg://msgInverse" align="MIDDLE_LEFT"/>
                            <lookupField dataContainer="jobCandidatesDc" optionsContainer="companiesDc"
                                         property="cityOfResidence" width="100%" align="MIDDLE_LEFT"/>
                            <checkBox caption="msg://msgInverse" align="MIDDLE_LEFT"/>
                            <lookupField dataContainer="jobCandidatesDc" optionsContainer="companiesDc"
                                         property="cityOfResidence" width="100%" align="MIDDLE_LEFT"/>
                        </row>
                    </rows>
                </grid>
            </vbox>
        </groupBox>
        <groupTable id="jobCandidatesTable"
                    width="100%"
                    dataContainer="jobCandidatesDc"
                    presentations="true">
            <actions>
            </actions>
            <columns>
                <column id="fullName"/>
                <column id="iteractionList.dateIteraction"/>
                <column id="birdhDate"/>
                <column id="currentCompany.comanyName"/>
                <column id="personPosition.positionRuName"/>
                <column id="cityOfResidence.cityRuName"/>
                <column id="openPosition"/>
            </columns>
            <rowsCount/>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
