<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://skillsFilterJobCandidateBrowse.caption"
        focusComponent="jobCandidatesTable"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate">
            <view extends="jobCandidate-view">
                <property name="skillTree"
                          view="_local">
                    <property name="skillTree"
                              view="_minimal"/>
                </property>
                <property name="fileImageFace"
                          view="_local"/>
                <property name="cityOfResidence"
                          view="_local"/>
                <property name="personPosition"
                          view="_local"/>
                <property name="candidateCv"
                          view="_minimal">
                    <property name="textCV"/>
                </property>
                <property name="iteractionList"
                          view="_local">
                    <property name="recrutier"
                              view="_local"/>
                </property>
            </view>
            <loader id="jobCandidatesDl"
                    cacheable="true">
                <query>
                    <![CDATA[select e
                    from itpearls_JobCandidate e
                    where e in (select g.candidate
                                from itpearls_CandidateCV g
                                where g.candidate = e)
                    order by e.fullName]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.personPosition = :personPosition</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.cityOfResidence = :city</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e in :jobCandidateFiltered</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="personPositionDc"
                    class="com.company.itpearls.entity.Position">
            <view extends="position-view">
            </view>
            <loader id="positionTypesLc">
                <query>
                    <![CDATA[select e from itpearls_Position e
                    where e.positionRuName not like '%(не использовать)%'
                    order by e.positionRuName]]>
                </query>
            </loader>
        </collection>
        <collection id="citiesDc"
                    class="com.company.itpearls.entity.City"
                    view="city-view">
            <loader id="citiesDl" cacheable="true">
                <query><![CDATA[select e
                from itpearls_City e
                order by e.cityRuName]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainBox"
            spacing="true">
        <groupBox id="filterGroupBix"
                  stylename="light"
                  visible="true"
                  caption="msg://msgFilter"
                  collapsed="false"
                  expand="filterHBox"
                  spacing="true"
                  collapsable="true"
                  width="100%"
                  height="AUTO">
            <hbox id="filterHBox"
                  spacing="true"
                  width="100%"
                  height="AUTO">
                <button id="clearFilterButton"
                        visible="true"
                        align="MIDDLE_LEFT"
                        width="AUTO"
                        height="100%"
                        caption="msg://msgClearFilter"
                        description="msg://mshClearFilterDesc"
                        invoke="clearFilterButtonInvoke"/>
                <lookupPickerField id="personPositionLookupPickerField"
                                   caption="msg://msgPosition"
                                   width="AUTO"
                                   optionsContainer="personPositionDc">
                    <actions>
                        <action id="lookup"
                                type="picker_lookup"/>
                        <action id="clear"
                                type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="cityLookupPickerField"
                                   caption="msg://msgCity"
                                   width="AUTO"
                                   optionsContainer="citiesDc">
                    <actions>
                        <action id="lookup"
                                type="picker_lookup"/>
                        <action id="clear"
                                type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <button id="loadFromOpenPositionButton"
                        width="AUTO"
                        height="100%"
                        align="MIDDLE_RIGHT"
                        caption="msg://msgLoad"
                        description="msg://msgLoadDesc"
                        invoke="loadFromOpenPositionButtonInvoke"/>
            </hbox>
        </groupBox>
        <vbox id="mainBox"
              width="100%"
              spacing="true">
            <groupBox id="skillGroupBox"
                      stylename="light"
                      width="100%"
                      height="100%"
                      collapsable="true"
                      expand="skillBoxHBox"
                      collapsed="false"
                      caption="msg://msgSkillBox">
                <hbox id="skillBoxHBox"
                      width="100%"
                      height="100%"
                      stylename="card">
                    <scrollBox id="allSkillsScrollBox"
                               box.expandRatio="5"
                               stylename="v-panel-caption"
                               width="100%"
                               height="100%"/>
                    <hbox width="100%" box.expandRatio="1"
                          height="100%"
                          spacing="false">
                        <vbox spacing="true"
                              width="100%"
                              expand="arrow2Box"
                              align="MIDDLE_CENTER"
                              height="100%">
                            <vbox spacing="true" width="AUTO" visible="false"
                                  align="MIDDLE_CENTER">
                                <label id="arrowRight1"
                                       icon="ARROW_RIGHT"
                                       stylename="huge"
                                       align="MIDDLE_CENTER"
                                       width="AUTO"/>
                                <label id="arrowLeft1"
                                       icon="ARROW_LEFT"
                                       stylename="huge"
                                       align="MIDDLE_CENTER"
                                       width="AUTO"/>
                            </vbox>
                            <vbox id="arrow2Box" spacing="true" width="AUTO" align="MIDDLE_CENTER">
                                <label id="arrowRight2"
                                       icon="ARROW_RIGHT"
                                       stylename="huge"
                                       align="MIDDLE_CENTER"
                                       width="AUTO"/>
                                <label id="arrowLeft2"
                                       icon="ARROW_LEFT"
                                       stylename="huge"
                                       align="MIDDLE_CENTER"
                                       width="AUTO"/>
                            </vbox>
                            <vbox spacing="true" width="AUTO" visible="false" align="MIDDLE_CENTER">
                                <label id="arrowRight3"
                                       icon="ARROW_RIGHT"
                                       stylename="huge"
                                       align="MIDDLE_CENTER"
                                       width="AUTO"/>
                                <label id="arrowLeft3"
                                       icon="ARROW_LEFT"
                                       stylename="huge"
                                       align="MIDDLE_CENTER"
                                       width="AUTO"/>
                            </vbox>
                        </vbox>
                    </hbox>
                    <scrollBox id="filterSkillsScrollBox"
                               box.expandRatio="5"
                               stylename="v-panel-caption"
                               width="100%"
                               height="100%"/>
                </hbox>
            </groupBox>
            <groupBox id="jobCandidateTableGroupBox"
                      stylename="light"
                      width="100%"
                      expand="jobCandidatesTableVBox"
                      height="100%"
                      collapsable="true"
                      collapsed="false"
                      caption="msg://msgJobCandidateTable">
                <vbox expand="jobCandidatesTable"
                      id="jobCandidatesTableVBox"
                      stylename="card"
                      margin="true"
                      align="TOP_LEFT"
                      width="100%"
                      height="100%">
                    <!--                <filter id="filter" visible="false"
                                            applyTo="jobCandidatesTable"
                                            dataLoader="jobCandidatesDl">
                                        <properties include=".*"/>
                                    </filter> -->
                    <dataGrid id="jobCandidatesTable"
                              width="100%"
                              visible="true"
                              dataContainer="jobCandidatesDc">
                        <actions>
                        </actions>
                        <columns>
                            <column id="fileImageFace"
                                    property="fileImageFace"
                                    maximumWidth="50px"
                                    width="50px">
                                <componentRenderer/>
                            </column>
                            <column property="fullName" id="fullName"/>
                            <column property="personPosition" id="personPosition"/>
                            <column property="cityOfResidence" id="cityOfResidence"/>
                            <column id="lastIteraction"
                                    caption="msg://msgDateLastIteraction"
                                    maximumWidth="90px"
                                    minimumWidth="90px">
                                <htmlRenderer nullRepresentation="null"/>
                            </column>
                            <column id="viewCandidateButton"
                                    width="100px"
                                    caption="msg://msgView">
                                <componentRenderer/>
                            </column>
                        </columns>
                        <rowsCount/>
                        <buttonsPanel id="buttonsPanel"
                                      alwaysVisible="true">
                        </buttonsPanel>
                    </dataGrid>
                    <hbox id="progressBarHBox"
                          spacing="true"
                          visible="false"
                          expand="filterProgressbar"
                          width="100%">
                        <progressBar id="filterProgressbar"
                                     align="MIDDLE_CENTER"
                                     width="100%"/>
                        <label id="progressLabel"
                               align="MIDDLE_CENTER"
                               width="AUTO"/>
                        <label id="foundLabel"
                               align="MIDDLE_CENTER"
                               width="AUTO"/>
                        <button id="buttonStop"
                                align="MIDDLE_CENTER"
                                visible="false"
                                caption="msg://msgStopFindButton"
                                description="msg://msgStopFindButtonDesc"
                                width="AUTO"
                                invoke="stopSearchProcessButtonInvoke"/>
                    </hbox>
                    <hbox id="searchFilterHBox"
                          spacing="true"
                          margin="true"
                          width="100%"
                          height="AUTO">
                        <button id="startSearchProcessButton"
                                width="AUTO"
                                align="MIDDLE_RIGHT"
                                caption="msg://msgSearch"
                                description="msg://msgSearchDesc"
                                invoke="startSearchProcessButtonInvoke"/>
                    </hbox>
                </vbox>
            </groupBox>
        </vbox>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
