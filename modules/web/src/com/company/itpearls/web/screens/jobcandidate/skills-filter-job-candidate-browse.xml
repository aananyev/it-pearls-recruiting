<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://skillsFilterJobCandidateBrowse.caption"
        focusComponent="jobCandidatesTable"
        messagesPack="com.company.itpearls.web.screens.jobcandidate">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate">
            <view extends="_local">
                <property name="skillTree"
                          view="_local">
                    <property name="skillTree"
                              view="_minimal"/>
                </property>
                <property name="fileImageFace"
                          view="_local"/>
                <property name="cityOfResidence"
                          view="_local"/>
                <property name="personPosition"
                          view="_local"/>
                <property name="candidateCv"
                          view="_minimal">
                    <property name="textCV"/>
                </property>
                <property name="iteractionList"
                          view="_local">
                    <property name="recrutier"
                              view="_local"/>
                </property>
            </view>
            <loader id="jobCandidatesDl"
                    cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e order by e.fullName]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainBox"
            spacing="true">
        <vbox id="mainBox"
              width="100%"
              spacing="true">
            <hbox id="skillBoxHBox"
                  width="100%"
                  height="100%"
                  stylename="card">
                <scrollBox id="allSkillsScrollBox"
                           box.expandRatio="5"
                           stylename="v-panel-caption"
                           width="100%"
                           height="100%"/>
                <hbox width="100%" box.expandRatio="1"
                      height="100%"
                      spacing="false">
                    <vbox spacing="true"
                          width="100%"
                          expand="arrow2Box"
                          align="MIDDLE_CENTER"
                          height="100%">
                        <vbox spacing="true" width="AUTO" visible="false"
                              align="MIDDLE_CENTER">
                            <label id="arrowRight1"
                                   icon="ARROW_RIGHT"
                                   stylename="huge"
                                   align="MIDDLE_CENTER"
                                   width="AUTO"/>
                            <label id="arrowLeft1"
                                   icon="ARROW_LEFT"
                                   stylename="huge"
                                   align="MIDDLE_CENTER"
                                   width="AUTO"/>
                        </vbox>
                        <vbox id="arrow2Box" spacing="true" width="AUTO" align="MIDDLE_CENTER">
                            <label id="arrowRight2"
                                   icon="ARROW_RIGHT"
                                   stylename="huge"
                                   align="MIDDLE_CENTER"
                                   width="AUTO"/>
                            <label id="arrowLeft2"
                                   icon="ARROW_LEFT"
                                   stylename="huge"
                                   align="MIDDLE_CENTER"
                                   width="AUTO"/>
                        </vbox>
                        <vbox spacing="true" width="AUTO" visible="false" align="MIDDLE_CENTER">
                            <label id="arrowRight3"
                                   icon="ARROW_RIGHT"
                                   stylename="huge"
                                   align="MIDDLE_CENTER"
                                   width="AUTO"/>
                            <label id="arrowLeft3"
                                   icon="ARROW_LEFT"
                                   stylename="huge"
                                   align="MIDDLE_CENTER"
                                   width="AUTO"/>
                        </vbox>
                    </vbox>
                </hbox>
                <scrollBox id="filterSkillsScrollBox"
                           box.expandRatio="5"
                           stylename="v-panel-caption"
                           width="100%"
                           height="100%"/>
            </hbox>
            <vbox expand="jobCandidatesTable"
                  id="jobCandidatesTableVBox"
                  width="100%"
                  height="100%">
                <filter id="filter" visible="false"
                        applyTo="jobCandidatesTable"
                        dataLoader="jobCandidatesDl">
                    <properties include=".*"/>
                </filter>
                <dataGrid id="jobCandidatesTable"
                          width="100%"
                          dataContainer="jobCandidatesDc">
                    <actions>
                    </actions>
                    <columns>
                        <column id="fileImageFace"
                                property="fileImageFace"
                                maximumWidth="50px"
                                width="50px">
                            <componentRenderer/>
                        </column>
                        <column property="fullName" id="fullName"/>
                        <column property="personPosition" id="personPosition"/>
                        <column property="cityOfResidence" id="cityOfResidence"/>
                        <column id="lastIteraction"
                                caption="msg://msgDateLastIteraction"
                                maximumWidth="90px"
                                minimumWidth="90px">
                            <htmlRenderer/>
                        </column>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                    </buttonsPanel>
                </dataGrid>
            </vbox>
        </vbox>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
