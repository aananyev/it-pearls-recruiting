<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="mainListsTable"
        messagesPack="com.company.itpearls.web.screens.mainlist">
    <data readOnly="true">
        <collection id="mainListsDc"
                    class="com.company.itpearls.entity.MainList"
                    view="mainList-view">
            <loader id="mainListsDl">
                <query>
                    <![CDATA[select e from itpearls_MainList e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainListsTable"
            spacing="true">
        <filter id="filter"
                applyTo="mainListsTable"
                dataLoader="mainListsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="mainListsTable"
                    width="100%"
                    dataContainer="mainListsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="numberList"/>
                <column id="contactName"/>
                <column id="personCurrentPosition"/>
                <column id="projectName"/>
                <column id="openPosition"/>
                <column id="iteractionName"/>
                <column id="communicationMethod"/>
                <column id="iteractionComment"/>
                <column id="userFromCompany"/>
                <column id="dataContact"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="mainListsTable.create"/>
                <button id="editBtn" action="mainListsTable.edit"/>
                <button id="removeBtn" action="mainListsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
