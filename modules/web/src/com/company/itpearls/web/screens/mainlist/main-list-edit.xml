<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.mainlist">
    <data>
        <instance id="mainListDc"
                  class="com.company.itpearls.entity.MainList"
                  view="mainList-view">
            <loader/>
        </instance>
        <collection id="contactNamesDc" class="com.company.itpearls.entity.JobCandidate" view="_minimal">
            <loader id="contactNamesLc">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e]]>
                </query>
            </loader>
        </collection>
        <collection id="personCurrentPositionsDc" class="com.company.itpearls.entity.Position" view="_minimal">
            <loader id="personCurrentPositionsLc">
                <query>
                    <![CDATA[select e from itpearls_Position e]]>
                </query>
            </loader>
        </collection>
        <collection id="projectNamesDc" class="com.company.itpearls.entity.Project" view="_minimal">
            <loader id="projectNamesLc">
                <query>
                    <![CDATA[select e from itpearls_Project e]]>
                </query>
            </loader>
        </collection>
        <collection id="openPositionsDc" class="com.company.itpearls.entity.OpenPosition" view="_minimal">
            <loader id="openPositionsLc">
                <query>
                    <![CDATA[select e from itpearls_OpenPosition e]]>
                </query>
            </loader>
        </collection>
        <collection id="iteractionNamesDc" class="com.company.itpearls.entity.Iteraction" view="_minimal">
            <loader id="iteractionNamesLc">
                <query>
                    <![CDATA[select e from itpearls_Iteraction e]]>
                </query>
            </loader>
        </collection>
        <collection id="userFromCompaniesDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="userFromCompaniesLc">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="mainListDc">
            <column width="250px">
                <textField id="numberListField" property="numberList"/>
                <lookupPickerField id="contactNameField" optionsContainer="contactNamesDc" property="contactName">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="personCurrentPositionField" optionsContainer="personCurrentPositionsDc"
                                   property="personCurrentPosition">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="projectNameField" optionsContainer="projectNamesDc" property="projectName">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="openPositionField" optionsContainer="openPositionsDc" property="openPosition">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="iteractionNameField" optionsContainer="iteractionNamesDc"
                                   property="iteractionName">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <textField id="communicationMethodField" property="communicationMethod"/>
                <textArea id="iteractionCommentField" property="iteractionComment" rows="5"/>
                <lookupPickerField id="userFromCompanyField" optionsContainer="userFromCompaniesDc"
                                   property="userFromCompany">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <dateField id="dataContactField" property="dataContact"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
