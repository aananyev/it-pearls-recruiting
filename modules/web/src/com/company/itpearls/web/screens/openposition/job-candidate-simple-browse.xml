<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://iteractionListSimpleBrowse.caption"
        focusComponent="iteractionListsTable"
        messagesPack="com.company.itpearls.web.screens.iteractionlist">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate">
            <view extends="jobCandidate-view">
                <property name="personPosition" view="_local"/>
                <property name="iteractionList"
                          view="_local">
                    <property name="iteractionType"
                              view="_local"/>
                    <property name="recrutier" view="_local"/>
                </property>
            </view>
            <loader id="jobCandidateDl" cacheable="true">
                <query><![CDATA[select e from itpearls_JobCandidate e order by e.fullName]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e in
                                    (select k.candidate
                                    from itpearls_IteractionList k
                                    where k.vacancy = :vacancy)
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e in
                                    (select l.candidate
                                    from itpearls_IteractionList l
                                    where @dateBefore(l.dateIteraction, :dateBefore)</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e in
                                    (select m.candidate
                                    from itpearls_IteractionList m
                                    where @dateAfter(m.dateIteraction, :dateAfter)</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="1100"
                forceDialog="true"/>
    <layout expand="iteractionListsTable"
            spacing="true">
        <hbox spacing="false">
            <label id="vacancyLabel"
                   stylename="h3"/>
        </hbox>
        <vbox height="AUTO"
              spacing="true"
              width="AUTO"
              align="TOP_LEFT">
            <label id="vacancyNameLabel"
                   stylename="h4"
                   width="AUTO"
                   visible="false"/>
            <label id="recrutierLabel"
                   stylename="h4/"
                   width="AUTO"
                   visible="false"/>
        </vbox>
        <hbox spacing="true">
            <radioButtonGroup id="beforeAnAfterRadioButtonsGroup"
                              orientation="horizontal"
                              align="MIDDLE_CENTER"
                              width="AUTO"/>
            <label width="AUTO"
                   value="|"
                   stylename="h2"
                   align="MIDDLE_CENTER"/>
            <radioButtonGroup id="interactionsCanidatesPeriodRadioButtonGroup"
                              align="MIDDLE_CENTER"
                              orientation="horizontal"
                              width="AUTO"/>
        </hbox>
        <dataGrid id="iteractionListsTable"
                  width="100%"
                  dataContainer="jobCandidatesDc">
            <columns>
                <column id="fullName"
                        sort="ASCENDING"
                        sortable="true"
                        property="fullName"/>
                <column id="personPosition"
                        property="personPosition"/>
                <column id="active"
                        caption="msg://msgActive"
                        width="40px">
                    <componentRenderer/>
                </column>
                <column id="lastInterationName"
                        caption="msg://msgLastInteractionType"
                        maximumWidth="300px"
                        width="300px">
                    <componentRenderer/>
                </column>
                <column id="lastInteractionDate"
                        caption="msg://msgLastInteractionDate"
                        maximumWidth="100px"
                        width="100px">
                    <componentRenderer/>
                </column>
                <column id="recruter"
                        caption="msg://msgRecruter"
                        maximumWidth="170px"
                        width="170px">
                    <componentRenderer/>
                </column>
                <column id="sourcer"
                        caption="msg://msgSourcer"
                        maximumWidth="170px"
                        width="170px">
                    <componentRenderer/>
                </column>
                <column id="jobCandidateCard"
                        caption=""
                        width="80px">
                    <componentRenderer/>
                </column>
            </columns>
        </dataGrid>
        <button action="lookupCancelAction"
                align="BOTTOM_RIGHT"/>
    </layout>
</window>
