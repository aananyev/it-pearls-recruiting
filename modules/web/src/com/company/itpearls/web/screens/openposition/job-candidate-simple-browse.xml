<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://iteractionListSimpleBrowse.caption"
        focusComponent="iteractionListsTable"
        messagesPack="com.company.itpearls.web.screens.iteractionlist">
    <data readOnly="true">
        <collection id="jobCandidatesDc"
                    class="com.company.itpearls.entity.JobCandidate">
            <view extends="_local">

            </view>
            <loader id="jobCandidateDl" cacheable="true">
                <query><![CDATA[select e from itpearls_JobCandidate e]]>
                <condition>
                    <and>
                        <c:jpql>
                            <c:where>e in (select k.candidate from itpearls_IteractionList k where k.vacancy = :vacancy)</c:where>
                        </c:jpql>
                    </and>
                </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="1100"
                forceDialog="true"/>
    <layout expand="iteractionListsTable"
            spacing="true">
        <hbox spacing="false">
            <label id="candidateLabel"
                   stylename="h3"/>
            <label value="("
                   stylename="h3"/>
            <label id="candidatePositionLabel"
                   stylename="h3"/>
            <label value=" / "
                   stylename="h3"/>
            <label id="candidatePositionEnLabel"
                   stylename="h3"/>
            <label value=")"
                   stylename="h3"/>
        </hbox>
        <vbox height="AUTO"
              spacing="true"
              width="AUTO"
              align="TOP_LEFT">
            <label id="vacancyNameLabel"
                   stylename="h4"
                   width="AUTO"
                   visible="false"/>
            <label id="recrutierLabel"
                   stylename="h4/"
                   width="AUTO"
                   visible="false"/>
        </vbox>
        <dataGrid id="iteractionListsTable"
                  width="100%"
                  dataContainer="jobCandidatesDc">
            <columns>
                <column id="fullName" property="fullName"/>
            </columns>
        </dataGrid>
        <button action="lookupCancelAction"
                align="BOTTOM_RIGHT"/>
    </layout>
</window>
