<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="openPositionsTable"
        messagesPack="com.company.itpearls.web.screens.openposition">
    <data readOnly="true">
        <collection id="openPositionsDc"
                    class="com.company.itpearls.entity.OpenPosition"
                    view="openPosition-view">
            <loader id="openPositionsDl">
                <query>
                    <![CDATA[select e from itpearls_OpenPosition e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="openPositionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="openPositionsTable"
                dataLoader="openPositionsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="openPositionsTable"
                    width="100%"
                    dataContainer="openPositionsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="vacansyName"/>
                <column id="positionType"/>
                <column id="projectName"/>
                <column id="companyName"/>
                <column id="companyDepartament"/>
                <column id="numberPosition"/>
                <column id="comment"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="openPositionsTable.create"/>
                <button id="editBtn" action="openPositionsTable.edit"/>
                <button id="removeBtn" action="openPositionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
