<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="openPositionsTable"
        messagesPack="com.company.itpearls.web.screens.openposition" icon="USER_PLUS">
    <data readOnly="true">
        <collection id="openPositionsDc"
                    class="com.company.itpearls.entity.OpenPosition"
                    view="openPosition-view">
            <loader id="openPositionsDl" cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_OpenPosition e
                    order by e.vacansyName]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.openClose=:openClosePos</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.vacansyName like
                                    (select
                                    f.openPosition.vacansyName
                                    from
                                    itpearls_RecrutiesTasks f
                                    where
                                    f.reacrutier = :recrutier and
                                    :nowDate between f.startDate and f.endDate and
                                    f.openPosition.vacansyName like e.vacansyName )
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.internalProject = :internalProject</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e in (select g.openPosition
                                    from itpearls_RecrutiesTasks g
                                    where g.reacrutier = :recrutier)
                                </c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="openPositionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="openPositionsTable"
                dataLoader="openPositionsDl">
            <properties include=".*"
                        exclude="id|birdhDate|email|id|whatsupName"
                        excludeProperties="version,createTs,createdBy,updateTs,updatedBy,deleteTs,deletedBy"/>
        </filter>
        <dataGrid id="openPositionsTable"
               width="100%"
               editorEnabled="false"
               headerVisible="true"
               contextMenuEnabled="false"
               textSelectionEnabled="false"
               selectionMode="SINGLE"
               reorderingAllowed="true"
               dataContainer="openPositionsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="icon"
                        resizable="false"
                        width="35px"
                        caption=""/>
                <column id="vacansyName"
                        property="vacansyName"
                        resizable="true"
                        caption="msg://msgVacancy"/>
                <column id="positionType"
                        resizable="true"
                        property="positionType"
                        caption="msg://msgPositionType"/>
                <column id="projectName"
                        resizable="true"
                        property="projectName"
                        caption="msg://msgProjectName"/>
                <column id="openClose"
                        collapsible="true"
                        collapsed="true"
                        property="openClose"
                        caption="mainMsg://msgOpecnClosePosition"/>
                <column id="numberPosition"
                        property="numberPosition"
                        width="50px"
                        caption="msg://msgNumberOpenPosition"/>
                <column id="createTs"
                        property="createTs"
                        width="100px"
                        collapsed="false"
                        caption="msg://msgCreatedTs">
                        <formatter format="dd.MM.yyyy"
                                   class="com.haulmont.cuba.gui.components.formatters.DateFormatter"/>
                </column>
            </columns>
            <rowsCount autoLoad="true"/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="openPositionsTable.create"/>
                <button id="editBtn"
                        action="openPositionsTable.edit"/>
                <button id="removeBtn"
                        action="openPositionsTable.remove"/>
                <button id="buttonSubscribe"
                        caption="msg://mshSubscibe"
                        invoke="subscribePosition"
                        icon="BELL"/>
                <button id="buttonExcel"
                        action="openPositionsTable.excel"
                        icon="EXCEL_ACTION"
                        enable="false"
                        visible="false"/>
            </buttonsPanel>
        </dataGrid>
        <hbox spacing="true">
            <checkBox id="checkBoxOnlyOpenedPosition"
                      description="msg://msgOnlyOpenedVacansy"
                      caption="msg://msgOnlyOpenedVacansy"/>
            <checkBox id="checkBoxOnlyMySubscribe"
                      description="msg://msgOnlyMySubscribe"
                      caption="msg://msgOnlyMySubscribe"/>
        </hbox>
        <hbox id="lookupActions"
              spacing="true"
              visible="false"
              align="TOP_RIGHT">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
