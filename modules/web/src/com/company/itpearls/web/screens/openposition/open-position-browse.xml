<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="openPositionsTable"
        messagesPack="com.company.itpearls.web.screens.openposition">
    <data readOnly="true">
        <collection id="openPositionsDc"
                    class="com.company.itpearls.entity.OpenPosition"
                    view="openPosition-view">
            <loader id="openPositionsDl">
                <query>
                    <![CDATA[select e from itpearls_OpenPosition e order by e.positionType]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.openClose=:openClosePos</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.vacansyName like
                                    (select
                                        f.openPosition.vacansyName
                                    from
                                        itpearls_RecrutiesTasks f
                                    where
                                        f.reacrutier = :recrutier and
                                        f.endDate > :nowDate and
                                        f.openPosition.vacansyName like e.vacansyName
                                    order by
                                        f.startDate desc )
                                </c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="openPositionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="openPositionsTable"
                dataLoader="openPositionsDl">
            <properties include=".*"/>
        </filter>
        <table id="openPositionsTable"
               width="100%"
               dataContainer="openPositionsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="positionType.positionRuName" collapsed="true"/>
                <column id="vacansyName" caption="msg://msgVacancy"/>
                <column id="cityPosition" caption="msg://msgCity" collapsed="true"/>
                <column id="projectName" caption="msg://msgProject" collapsed="true"/>
                <column id="positionType" caption="msg://msgPositionType"/>
                <column id="companyName"/>
                <column id="projectName.projectName"/>
                <column id="openClose" caption="mainMsg://msgOpecnClosePosition" align="CENTER"/>
                <column id="numberPosition" description="msg://msgNumberOpenPosition"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="openPositionsTable.create"/>
                <button id="editBtn" action="openPositionsTable.edit"/>
                <button id="removeBtn" action="openPositionsTable.remove"/>
                <button id="buttonSubscribe" caption="msg://mshSubscibe" invoke="subscribePosition" icon="BELL"/>
            </buttonsPanel>
        </table>
        <hbox spacing="true">
            <checkBox id="checkBoxOnlyOpenedPosition" description="msg://msgOnlyOpenedVacansy" caption="msg://msgOnlyOpenedVacansy"/>
            <checkBox id="checkBoxOnlyMySubscribe" description="msg://msgOnlyMySubscribe" caption="msg://msgOnlyMySubscribe"/>
        </hbox>
        <hbox id="lookupActions" spacing="true" visible="false" align="TOP_RIGHT">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
