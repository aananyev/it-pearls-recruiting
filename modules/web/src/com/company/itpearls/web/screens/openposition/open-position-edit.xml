                                       caption="msg://msgCompanyName"
                                       width="100%"
                                       required="true">
                        <actions>
                            <action id="lookup"
                                    type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <hbox spacing="true"
                          expand="cityOpenPositionField"
                          width="100%">
                        <lookupPickerField id="cityOpenPositionField"
                                           dataContainer="openPositionDc"
                                           optionsContainer="citiesDc"
                                           property="cityPosition"
                                           width="100%"
