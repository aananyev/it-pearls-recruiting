<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://editorCaption"
        focusComponent="groupBoxOpenPosition"
        messagesPack="com.company.itpearls.web.screens.openposition" icon="USER_PLUS">
    <data>
        <instance id="openPositionDc"
                  class="com.company.itpearls.entity.OpenPosition"
                  view="openPosition-view">
            <loader/>
            <collection id="openPositionSkillsListsDc" property="skillsList"/>
            <collection id="openPositionCandidatesesDc" property="candidates"/>
        </instance>
        <collection id="positionTypesDc" class="com.company.itpearls.entity.Position" view="_local">
            <loader id="positionTypesLc" cacheable="true">
                <query><![CDATA[select e from itpearls_Position e
order by e.positionRuName]]></query>
            </loader>
        </collection>
        <collection id="projectNamesDc" class="com.company.itpearls.entity.Project" view="_local">
            <loader id="projectNamesLc" cacheable="true">
                <query><![CDATA[select e from itpearls_Project e where e.projectIsClosed is null
or e.projectIsClosed=false order by e.projectName]]></query>
            </loader>
        </collection>
        <collection id="companyNamesDc" class="com.company.itpearls.entity.Company" view="_local">
            <loader id="companyNamesLc" cacheable="true">
                <query><![CDATA[select e from itpearls_Company e
order by e.comanyName]]></query>
            </loader>
        </collection>
        <collection id="companyDepartamentsDc" class="com.company.itpearls.entity.CompanyDepartament"
                    view="companyDepartament-view">
            <loader id="companyDepartamentsLc" cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_CompanyDepartament e where e.departamentRuName not like '%(не использовать)%'
order by e.departamentRuName]]>
                </query>
            </loader>
        </collection>
        <collection id="projectDc" class="com.company.itpearls.entity.Project" view="_local">
            <loader id="companyOfDepatmentDl" cacheable="true">
                <query><![CDATA[select e from itpearls_Project e where e.endProjectDate is not null]]></query>
            </loader>
        </collection>
        <collection id="cityOfCompanyDc" class="com.company.itpearls.entity.Company" view="_local">
            <loader id="cityOfCompanyDl" cacheable="true">
                <query><![CDATA[select e from itpearls_Company e]]></query>
            </loader>
        </collection>
        <collection id="citiesDc" class="com.company.itpearls.entity.City" view="_local">
            <loader id="citiesDl" cacheable="true">
                <query><![CDATA[select e from itpearls_City e order by e.cityRuName]]></query>
            </loader>
        </collection>
        <collection id="taskRecrutior" class="com.company.itpearls.entity.RecrutiesTasks">
            <view extends="_local">
                <property name="reacrutier" fetch="BATCH" view="_local"/>
                <property name="openPosition" fetch="BATCH" view="_local"/>
            </view>
            <loader id="recrutiesTasksesDl" cacheable="true">
                <query>
                    <![CDATA[select e from itpearls_RecrutiesTasks e
where CURRENT_DATE between e.startDate and e.endDate
order by e.endDate desc]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.openPosition.vacansyName = :openPosition</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet id="tabSheetOpenPosition">
            <tab id="tabOpenPosition" caption="msg://msgNamePosition" margin="true,false,false,false" spacing="true">
                <hbox id="hboxProject1" spacing="true" width="100%">
                    <checkBox id="openClosePositionCheckBox" dataContainer="openPositionDc" property="openClose"
                              caption="mainMsg://msgPositionClose" align="MIDDLE_LEFT"/>
                    <lookupField id="priorityField"
                                 dataContainer="openPositionDc" property="priority"
                                 caption="msg://msgPriorityPosition" width="50%" required="true" align="MIDDLE_LEFT">
                    </lookupField>
                </hbox>
                <groupBox id="groupBoxOpenPosition" spacing="true">
                    <hbox id="hboxVacansy" spacing="true" width="100%">
                        <textField id="vacansyNameField" dataContainer="openPositionDc" property="vacansyName"
                                   caption="msg://msgVacansy" width="100%" required="true"/>
                        <lookupPickerField id="positionTypeField" optionsContainer="positionTypesDc"
                                           dataContainer="openPositionDc" property="positionType"
                                           caption="msg://msgPositionType" width="100%" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </hbox>
                    <hbox id="hboxProject" spacing="true" width="100%">
                        <lookupPickerField id="projectNameField" optionsContainer="projectNamesDc"
                                           dataContainer="openPositionDc" property="projectName"
                                           caption="msg://msgNamePosition" width="100%" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="companyDepartamentField" optionsContainer="companyDepartamentsDc"
                                           dataContainer="openPositionDc" property="companyDepartament"
                                           caption="msg://msgDepartment" width="100%" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </hbox>
                    <hbox id="hboxCompany" spacing="true" width="100%">
                        <lookupPickerField id="companyNameField" optionsContainer="companyNamesDc"
                                           dataContainer="openPositionDc" property="companyName" caption="msg://msgCompanyName"
                                           width="100%" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                        <lookupPickerField id="cityOpenPositionField" dataContainer="openPositionDc"
                                           optionsContainer="citiesDc" property="cityPosition" width="100%"
                                           caption="mainMsg://msgCity" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                            </actions>
                        </lookupPickerField>
                    </hbox>
                    <textField id="numberPositionField" dataContainer="openPositionDc" property="numberPosition"
                               caption="msg://msgNumberOpenPosition" width="50%"/>
                </groupBox>
                <hbox id="hboxSalary" spacing="true" width="100%">
                    <textField id="openPositionFieldSalaryMin" dataContainer="openPositionDc" property="salaryMin"
                               caption="mainMsg://msgSalaryMin" width="100%"/>
                    <textField id="openPositionFieldSalaryMax" dataContainer="openPositionDc" property="salaryMax"
                               caption="msg://msgSalaryMax" width="100%"/>
                </hbox>
            </tab>
            <tab caption="mainMsg://msgJobDescription" margin="true,false,false,false" spacing="true" id="tabJobDescription">
                <richTextArea id="openPositionRichTextArea" dataContainer="openPositionDc" property="comment" width="100%" height="300pt"
                              required="true"/>
            </tab>
            <tab id="tabSkills" caption="msg://msgSkilsPosition" margin="true,false,false,false" spacing="true">
                <groupBox spacing="true">
                    <table id="openPositionSkillsListTable" height="300px" width="100%" dataContainer="openPositionSkillsListsDc">
                        <columns>
                            <column id="skillName"/>
                        </columns>
                        <actions>
                            <action id="add" type="add"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button action="openPositionSkillsListTable.add"/>
                            <button action="openPositionSkillsListTable.edit"/>
                            <button action="openPositionSkillsListTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </tab>
            <tab caption="mainMsg://msgResrutierTask" margin="true,false,false,false" spacing="true" id="tabRecrutior">
                <table id="recrutiesTasksTable" height="300px" width="100%" dataContainer="taskRecrutior">
                    <columns>
                        <column id="startDate"/>
                        <column id="endDate"/>
                        <column id="reacrutier.name"/>
                        <column id="openPosition.vacansyName"/>
                        <column id="openPosition.projectName.projectName"/>
                    </columns>
                    <buttonsPanel>
                        <button action="recrutiesTasksTable.create"/>
                        <button action="recrutiesTasksTable.edit"/>
                        <button action="recrutiesTasksTable.remove"/>
                    </buttonsPanel>
                    <actions>
                        <action id="create" type="create"/>
                        <action type="edit" id="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                </table>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true" align="TOP_RIGHT">
            <button invoke="subscribePosition" caption="msg://msgSubscribe" icon="BELL"/>
            <button id="windowCommitAndCloseButton" action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
