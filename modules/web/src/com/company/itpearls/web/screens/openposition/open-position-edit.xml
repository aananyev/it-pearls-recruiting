<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://editorCaption"
        focusComponent="groupBoxOpenPosition"
        messagesPack="com.company.itpearls.web.screens.openposition">
    <data>
        <instance id="openPositionDc"
                  class="com.company.itpearls.entity.OpenPosition"
                  view="openPosition-view">
            <loader/>
            <collection id="openPositionSkillsListsDc" property="skillsList"/>
            <collection id="openPositionCandidatesesDc" property="candidates"/>
        </instance>
        <collection id="positionTypesDc" class="com.company.itpearls.entity.Position" view="_local">
            <loader id="positionTypesLc">
                <query><![CDATA[select e from itpearls_Position e
order by e.positionRuName]]></query>
            </loader>
        </collection>
        <collection id="projectNamesDc" class="com.company.itpearls.entity.Project" view="_minimal">
            <loader id="projectNamesLc">
                <query><![CDATA[select e from itpearls_Project e where e.projectIsClosed is null
or e.projectIsClosed=false order by e.projectName]]></query>
            </loader>
        </collection>
        <collection id="companyNamesDc" class="com.company.itpearls.entity.Company" view="_minimal">
            <loader id="companyNamesLc">
                <query><![CDATA[select e from itpearls_Company e
order by e.comanyName]]></query>
            </loader>
        </collection>
        <collection id="companyDepartamentsDc" class="com.company.itpearls.entity.CompanyDepartament"
                    view="companyDepartament-view">
            <loader id="companyDepartamentsLc">
                <query><![CDATA[select e from itpearls_CompanyDepartament e
order by e.departamentRuName]]></query>
            </loader>
        </collection>
        <collection id="projectDc" class="com.company.itpearls.entity.Project" view="project-view">
            <loader id="companyOfDepatmentDl">
                <query><![CDATA[select e from itpearls_Project e where e.endProjectDate is not null]]></query>
            </loader>
        </collection>
        <collection id="cityOfCompanyDc" class="com.company.itpearls.entity.Company" view="company-view">
            <loader id="cityOfCompanyDl">
                <query><![CDATA[select e from itpearls_Company e]]></query>
            </loader>
        </collection>
        <collection id="citiesDc" class="com.company.itpearls.entity.City" view="_minimal">
            <loader id="citiesDl">
                <query><![CDATA[select e from itpearls_City e
order by e.cityRuName]]></query>
            </loader>
        </collection>
        <collection id="jobCandidatesDc" class="com.company.itpearls.entity.JobCandidate" view="JobCandidate-person-position">
            <loader id="jobCandidatesDl">
                <query>
                    <![CDATA[select e from itpearls_JobCandidate e order by e.secondName, e.firstName]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.personPosition.positionRuName like :candidatePersonPosition</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="taskRecrutior" class="com.company.itpearls.entity.RecrutiesTasks" view="recrutiesTasks-view">
            <loader id="recrutiesTasksesDl">
                <query>
                    <![CDATA[select e from itpearls_RecrutiesTasks e
order by e.reacrutier, e.endDate desc]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.openPosition.vacansyName = :openPosition</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet id="tabSheetOpenPosition">
            <tab id="tabOpenPosition" caption="msg://msgNamePosition" margin="true,false,false,false" spacing="true">
                <groupBox id="groupBoxOpenPosition" spacing="true">
                    <checkBox id="openClosePositionCheckBox" dataContainer="openPositionDc" property="openClose"
                              caption="mainMsg://msgPositionClose"/>
                    <textField id="vacansyNameField" dataContainer="openPositionDc" property="vacansyName"
                               caption="msg://msgVacansy" width="50%"/>
                    <lookupPickerField id="positionTypeField" optionsContainer="positionTypesDc"
                                       dataContainer="openPositionDc" property="positionType"
                                       caption="msg://msgPositionType" width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="projectNameField" optionsContainer="projectNamesDc"
                                       dataContainer="openPositionDc" property="projectName"
                                       caption="msg://msgNamePosition" width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="companyDepartamentField" optionsContainer="companyDepartamentsDc"
                                       dataContainer="openPositionDc" property="companyDepartament"
                                       caption="msg://msgDepartment" width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="companyNameField" optionsContainer="companyNamesDc"
                                       dataContainer="openPositionDc" property="companyName" caption="msg://msgCompanyName"
                                       width="50%">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="cityOpenPositionField" dataContainer="openPositionDc"
                                       optionsContainer="citiesDc" property="cityPosition" width="50%"
                                       caption="mainMsg://msgCity">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <textField id="numberPositionField" dataContainer="openPositionDc" property="numberPosition"
                               caption="msg://msgNumberOpenPosition" width="50%"/>
                    <textField id="openPositionFieldSalaryMin" dataContainer="openPositionDc" property="salaryMin"
                               caption="mainMsg://msgSalaryMin" width="50%"/>
                    <textField id="openPositionFieldSalaryMax" dataContainer="openPositionDc" property="salaryMax"
                               caption="msg://msgSalaryMax" width="50%"/>
                </groupBox>
            </tab>
            <tab caption="mainMsg://msgJobDescription" margin="true,false,false,false" spacing="true" id="tabJobDescription">
                <richTextArea id="openPositionRichTextArea" dataContainer="openPositionDc" property="comment" width="100%" height="350pt"/>
            </tab>
            <tab id="tabSkills" caption="msg://msgSkilsPosition" margin="true,false,false,false" spacing="true">
                <groupBox spacing="true">
                    <table id="openPositionSkillsListTable" height="400px" width="100%" dataContainer="openPositionSkillsListsDc">
                        <columns>
                            <column id="skillName"/>
                        </columns>
                        <actions>
                            <action id="add" type="add"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button action="openPositionSkillsListTable.add"/>
                            <button action="openPositionSkillsListTable.edit"/>
                            <button action="openPositionSkillsListTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </tab>
            <tab caption="mainMsg://msgResrutierTask" margin="true,false,false,false" spacing="true" id="tabRecrutior">
                <table id="recrutiesTasksTable" height="100px" width="100%" dataContainer="taskRecrutior">
                    <columns>
                        <column id="startDate"/>
                        <column id="endDate"/>
                        <column id="reacrutier.name"/>
                        <column id="openPosition.vacansyName"/>
                        <column id="openPosition.projectName.projectName"/>
                    </columns>
                    <buttonsPanel>
                        <button action="recrutiesTasksTable.create"/>
                        <button action="recrutiesTasksTable.edit"/>
                        <button action="recrutiesTasksTable.remove"/>
                    </buttonsPanel>
                    <actions>
                        <action id="create" type="create"/>
                        <action type="edit" id="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                </table>
            </tab>
            <tab id="tabCandidates" caption="msg://msgCandidate" margin="true,false,false,false" spacing="true">
                <table id="openPositionCandidatesTable" height="400px" width="100%" dataContainer="jobCandidatesDc">
                    <columns>
                        <column id="fullName" caption="mainMsg://msgFullName"/>
                        <column id="personPosition"/>
                        <column id="cityOfResidence"/>
                        <column id="currentCompany"/>
                        <column id="birdhDate" caption="mainMsg://msgBirthday"/>
                    </columns>
                </table>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true" align="TOP_RIGHT">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
