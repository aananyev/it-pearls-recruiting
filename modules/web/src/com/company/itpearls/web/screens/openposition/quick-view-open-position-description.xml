<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://quickViewOpenPositionDescription.caption"
        messagesPack="com.company.itpearls.web.screens.openposition">
    <dialogMode height="600"
                forceDialog="true"
                width="800"/>
    <layout expand="jobDescriptionViewVBox">
        <vbox id="jobDescriptionViewVBox"
              spacing="true"
              expand="jobDescriptionViewTab"
              width="100%"
              height="100%">
            <tabSheet id="jobDescriptionViewTab"
                      height="100%"
                      stylename="framed"
                      width="100%">
                <tab id="jobDescriptionTab"
                     caption="msg://msgjobDescriptionTab">
                    <richTextArea id="jobDesxriptionRichTextArea"
                                  width="100%"
                                  editable="false"
                                  height="100%"/>
                </tab>
                <tab id="jobDescriptionEngTab"
                     caption="msg://msgJobDescriptionEng">
                    <richTextArea id="jobDescriptionEngRichTextArea"
                                  width="100%"
                                  editable="false"
                                  height="100%"/>
                </tab>
                <tab id="projectDescriptionTab"
                     caption="msg://msgProjectDescriptionTab">
                    <richTextArea id="projectDescriptionRichTextArea"
                                  width="100%"
                                  editable="false"
                                  height="100%"/>
                </tab>
                <tab id="companyDescriptionTab"
                     caption="msg://msgCompanyDescriptionTab">
                    <richTextArea id="companyDescriptionRichTextArea"
                                  width="100%"
                                  editable="false"
                                  height="100%"/>
                </tab>
                <tab id="workingConditionsTab"
                     caption="msg://msgWorkingConditions">
                    <richTextArea id="companyWorkingConditionsRichTextArea"
                                  width="100%"
                                  editable="false"
                                  height="100%"/>
                </tab>
            </tabSheet>
            <hbox id="lookupActions"
                  spacing="true"
                  visible="true"
                  align="TOP_RIGHT">
                <checkBox id="copyAllToClipboardCheckBox"
                          align="MIDDLE_RIGHT"
                          caption="msg://msgCopyAllToClipboard"/>
                <button id="copyToClipboard"
                        icon="CLIPBOARD"
                        align="MIDDLE_RIGHT"
                        caption="msg://msgCopyToClipboard"
                        invoke="copyToClipboard"/>
            </hbox>
        </vbox>
    </layout>
</window>