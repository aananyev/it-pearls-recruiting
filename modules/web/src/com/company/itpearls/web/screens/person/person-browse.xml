<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="personsTable"
        messagesPack="com.company.itpearls.web.screens.person" icon="USER">
    <data readOnly="true">
        <collection id="personsDc"
                    class="com.company.itpearls.entity.Person"
                    view="person-view">
            <loader id="personsDl">
                <query>
                    <![CDATA[select e from itpearls_Person e order by e.secondName, e.firstName]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="personsTable"
            spacing="true">
        <filter id="filter"
                applyTo="personsTable"
                dataLoader="personsDl">
            <properties include=".*"
                        excludeProperties="version,createTs,createdBy,updateTs,updatedBy,deleteTs,deletedBy"/>
        </filter>
        <dataGrid id="personsTable"
                    width="100%"
                    dataContainer="personsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="secondName" property="secondName" caption="msg://msgSecondName"/>
                <column id="firstName" property="firstName" caption="msg://msgFirstName"/>
                <column id="middleName" property="middleName" caption="msg://msgMiddleName"/>
                <column id="personPosition" property="personPosition" caption="msg://msgPersonPosition"/>
                <column id="positionCountry" property="positionCountry" caption="msg://msgPositionCountry"/>
                <column id="cityOfResidence" property="cityOfResidence" caption="msg://msgCityOfResidence"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="personsTable.create"/>
                <button id="editBtn" action="personsTable.edit"/>
                <button id="removeBtn" action="personsTable.remove"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
