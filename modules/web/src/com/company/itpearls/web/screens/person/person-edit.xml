<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.person" icon="USER">
    <data>
        <instance id="personDc"
                  class="com.company.itpearls.entity.Person"
                  view="person-view">
            <loader/>
        </instance>
        <collection id="positionCountriesDc" class="com.company.itpearls.entity.Country" view="_minimal">
            <loader id="positionCountriesLc">
                <query><![CDATA[select e from itpearls_Country e
order by e.countryRuName]]></query>
            </loader>
        </collection>
        <collection id="personPositionsDc" class="com.company.itpearls.entity.Position" view="_minimal">
            <loader id="personPositionsLc">
                <query><![CDATA[select e from itpearls_Position e
order by e.positionRuName]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="personDc">
                <column width="250px">
                    <textField id="firstNameField" property="firstName"/>
                    <textField id="middleNameField" property="middleName"/>
                    <textField id="secondNameField" property="secondName"/>
                    <dateField id="birdhDateField" property="birdhDate"/>
                    <textField id="emailField" property="email"/>
                    <textField id="phoneField" property="phone"/>
                    <textField id="mobilePhoneField" caption="msg://msgMobPhone" dataContainer="personDc"
                               property="mobPhone"/>
                    <textField id="skypeNameField" property="skypeName"/>
                    <textField id="telegramNameField" property="telegramName"/>
                    <textField id="wiberNameField" property="wiberName"/>
                    <textField id="watsupNameField" property="watsupName"/>
                    <lookupPickerField id="positionCountryField" optionsContainer="positionCountriesDc"
                                       property="positionCountry">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                    <lookupPickerField id="personPositionField" optionsContainer="personPositionsDc"
                                       property="personPosition">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                        </actions>
                    </lookupPickerField>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
