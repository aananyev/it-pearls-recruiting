<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://personelReserveBrowse.caption"
        focusComponent="personelReservesTable"
        messagesPack="com.company.itpearls.web.screens.personelreserve">
    <data readOnly="true">
        <collection id="personelReservesDc"
                    class="com.company.itpearls.entity.PersonelReserve">
            <view extends="_local">
                <property name="jobCandidate" view="_local">
                    <property name="personPosition" view="_local"/>
                    <property name="fileImageFace" view="_local"/>
                    <property name="iteractionList" view="_local">
                        <property name="vacancy" view="_local"/>
                        <property name="iteractionType" view="_local"/>
                    </property>
                </property>
                <property name="recruter" view="_local"/>
                <property name="personPosition" view="_local"/>
                <property name="openPosition" view="_local"/>
            </view>
            <loader id="personelReservesDl">
                <query>
                    <![CDATA[select e from itpearls_PersonelReserve e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.recruter = :recruter</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.inProcess = :actives</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.jobCandidate.iteractionList in :iteractionList</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="personelReservesTable"
            spacing="true">
        <filter id="filter"
                applyTo="personelReservesTable"
                dataLoader="personelReservesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="personelReservesTable"
                    width="100%"
                    multiLineCells="true"
                    dataContainer="personelReservesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="statusColumn" width="50px"/>
                <column id="inWorkColumn" width="50px" generator="inWorkColumnGenerator"/>
                <column id="jobCandidate" width="300px"/>
                <column id="recruter" width="150px"/>
                <column id="personPosition" width="150px"/>
                <column id="openPosition" width="300px"/>
                <column id="date" width="150px"/>
                <column id="termOfPlacement" width="150px"/>
                <column id="endDate" width="150px"/>
            </columns>
            <rowsCount autoLoad="true"/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="personelReservesTable.create"/>
                <button id="editBtn" action="personelReservesTable.edit"/>
                <button id="removeBtn" action="personelReservesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <groupBox id="filtersHBox"
                  collapsed="false"
                  collapsable="true"
                  caption="msg://msgFilter"
                  spacing="true"
                  width="100%">
            <hbox spacing="true" width="AUTO">
                <checkBox id="allCandidatesCheckBox"
                          caption="msg://msgAllCandidates"/>
                <checkBox id="activesCheckBox"
                          caption="msg://msgNoActives"/>
                <checkBox id="inNotWorkCheckBox"
                          visible="false"
                          caption="msg://msgInWork"/>
            </hbox>
        </groupBox>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
