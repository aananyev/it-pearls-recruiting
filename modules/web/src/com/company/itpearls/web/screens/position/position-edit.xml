<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.position" icon="OPENID">
    <data>
        <instance id="positionDc"
                  class="com.company.itpearls.entity.Position"
                  view="position-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <groupBox>
            <label id="textPositionName" stylename="h1"/>
        </groupBox>
        <form id="form" dataContainer="positionDc">
            <column width="250px">
                <textField id="positionRuNameField" property="positionRuName" caption="msg://msgPositionRuName"/>
                <textField id="positionEnNameField" property="positionEnName" caption="msg://msgPositionEnName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
