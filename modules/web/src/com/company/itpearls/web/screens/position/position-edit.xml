<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="positionRuNameField"
        messagesPack="com.company.itpearls.web.screens.position" icon="OPENID">
    <data>
        <instance id="positionDc"
                  class="com.company.itpearls.entity.Position"
                  view="position-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="positionEditVBox" spacing="true">
        <groupBox>
            <label id="textPositionName" stylename="h1"/>
        </groupBox>
        <vbox id="positionEditVBox"
              spacing="true"
              expand="textAreaBox">
            <hbox width="100%"
                  spacing="true"
                  expand="positionDescriptionVBox">
                <vbox id="positionDescriptionVBox"
                      align="TOP_LEFT"
                      width="100%"
                      spacing="true">
                    <textField id="positionRuNameField"
                               dataContainer="positionDc"
                               width="50%"
                               property="positionRuName"
                               caption="msg://msgPositionEnName"/>
                    <textField id="positionEnNameField"
                               dataContainer="positionDc"
                               width="50%"
                               property="positionEnName"
                               caption="msg://msgPositionRuName"/>
                </vbox>
                <vbox id="dropZone"
                      spacing="true"
                      width="110px"
                      height="146px"
                      align="BOTTOM_RIGHT"
                      expand="picVBox"
                      stylename="dropzone-container">
                    <vbox id="picVBox">
                        <image id="positionLogoPic"
                               dataContainer="positionDc"
                               property="logo"
                               width="100%"
                               visible="true"
                               align="TOP_RIGHT"
                               stylename="widget-border"
                               scaleMode="FILL"/>
                        <image id="logoDefaultPic"
                               width="100%"
                               visible="false"
                               align="TOP_RIGHT"
                               stylename="widget-border"
                               scaleMode="FILL">
                            <theme path="icons/no-programmer.jpeg"/>
                        </image>
                    </vbox>
                    <upload id="fileImageLogoUpload"
                            fileStoragePutMode="IMMEDIATE"
                            dataContainer="positionDc"
                            align="BOTTOM_CENTER"
                            showFileName="false"
                            dropZone="dropZone"
                            clearButtonCaption=""
                            uploadButtonCaption=""
                            clearButtonIcon="font-icon:CLOSE"
                            clearButtonDescription="msg://msgClear"
                            uploadButtonIcon="font-icon:UPLOAD"
                            uploadButtonDescription="msg://msgUpload"
                            showClearButton="true"
                            property="logo"/>
                </vbox>
            </hbox>
            <hbox id="textAreaBox" width="100%" spacing="true">
                <richTextArea id="standartDescriptionTextArea"
                              dataContainer="positionDc"
                              property="standartDescription"
                              width="100%"
                              height="100%"
                              caption="msg://msgStandartDescription"/>
                <richTextArea id="whoIsThisGuyTextArea"
                              dataContainer="positionDc"
                              property="whoIsThisGuy"
                              width="100%"
                              height="100%"
                              caption="msg://msgWhoThisGuyDescription"/>
            </hbox>
        </vbox>
        <hbox id="editActions"
              spacing="true"
              align="BOTTOM_RIGHT">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
