<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="projectsTable"
        messagesPack="com.company.itpearls.web.screens.project" icon="icons/globe.png">
    <data readOnly="true">
        <collection id="projectsDc"
                    class="com.company.itpearls.entity.Project"
                    view="project-view">
            <loader id="projectsDl">
                <query>
                    <![CDATA[select e from itpearls_Project e
order by e.projectIsClosed desc, e.projectName]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="projectsTable"
            spacing="true">
        <filter id="filter"
                applyTo="projectsTable"
                dataLoader="projectsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="projectsTable"
                    width="100%"
                    dataContainer="projectsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="projectIsClosed" caption="msg://msgProjectIsClosed" align="CENTER"/>
                <column id="projectName" caption="msg://msgProjectName"/>
                <column id="startProjectDate" caption="msg://msgProjectStartDate"/>
                <column id="endProjectDate" caption="msg://msgProjectEndDate"/>
                <column id="projectDepartment" caption="msg://msgProjectDepartament"/>
                <column id="projectOwner" caption="msg://msgProjectOwner"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="projectsTable.create"/>
                <button id="editBtn" action="projectsTable.edit"/>
                <button id="removeBtn" action="projectsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
