<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.project">
    <data>
        <instance id="projectDc"
                  class="com.company.itpearls.entity.Project"
                  view="project-view">
            <loader/>
            <collection id="projectOpenPositionsDc" property="openPosition"/>
            <collection id="projectJobCandidatesDc" property="jobCandidate"/>
        </instance>
        <collection id="projectDepartmentsDc" class="com.company.itpearls.entity.CompanyDepartament" view="_minimal">
            <loader id="projectDepartmentsLc">
                <query>
                    <![CDATA[select e from itpearls_CompanyDepartament e]]>
                </query>
            </loader>
        </collection>
        <collection id="projectOwnersDc" class="com.company.itpearls.entity.Person" view="_minimal">
            <loader id="projectOwnersLc">
                <query>
                    <![CDATA[select e from itpearls_Person e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="projectDc">
            <column width="250px">
                <textField id="projectNameField" property="projectName"/>
                <dateField id="startProjectDateField" property="startProjectDate"/>
                <dateField id="endProjectDateField" property="endProjectDate"/>
                <lookupPickerField id="projectDepartmentField" optionsContainer="projectDepartmentsDc"
                                   property="projectDepartment">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="projectOwnerField" optionsContainer="projectOwnersDc" property="projectOwner">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <groupBox id="groupBoxVacancy" spacing="true">
            <table id="projectOpenPositionTable" height="100px" width="100%" dataContainer="projectOpenPositionsDc">
                <columns>
                    <column id="vacansyName"/>
                    <column id="numberPosition"/>
                    <column id="comment"/>
                </columns>
            </table>
        </groupBox>
        <groupBox id="groupBoxIteraction" spacing="true">
            <table id="projectJobCandidateTable" height="100px" width="100%" dataContainer="projectJobCandidatesDc">
                <columns>
                    <column id="numberIteraction"/>
                    <column id="dateIteraction"/>
                    <column id="communicationMethod"/>
                    <column id="comment"/>
                </columns>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
