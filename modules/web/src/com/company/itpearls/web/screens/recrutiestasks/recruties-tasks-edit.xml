<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.recrutiestasks">
    <data>
        <collection id="openPositionsDc" class="com.company.itpearls.entity.OpenPosition" view="openPosition-rtasks-view">
            <loader id="openPositionsDl">
                <query>
                    <![CDATA[select e from itpearls_OpenPosition e
where e.openClose = false
order by e.vacansyName]]>
                </query>
            </loader>
        </collection>
        <instance id="recrutiesTasksDc"
                  class="com.company.itpearls.entity.RecrutiesTasks"
                  view="recrutiesTasks-view">
            <loader id="recrutiesTasksDl" entityId=""/>
        </instance>
        <collection id="usersDc" class="com.haulmont.cuba.security.entity.User" view="_local">
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from sec$User e
order by e.lastName, e.firstName]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="recrutiesTasksDc" width="100%">
            <column width="250px">
                <dateField id="startDateField" property="startDate"/>
                <dateField id="endDateField" property="endDate"/>
                <lookupPickerField id="recrutiesTasksFieldUser" dataContainer="recrutiesTasksDc"
                                   optionsContainer="usersDc" width="50%" property="reacrutier">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="recrutiesTasksField" width="50%" dataContainer="recrutiesTasksDc" optionsContainer="openPositionsDc"
                                   property="openPosition">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <checkBox id="recrutiesTasksCheckBox" dataContainer="recrutiesTasksDc" property="subscribe"
                          caption="msg://msgSubscribe"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="windowExtendAndCloseButton" action="windowCommitAndClose" caption="msg://msgExtend"/>
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
