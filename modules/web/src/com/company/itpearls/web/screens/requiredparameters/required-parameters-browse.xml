<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="requiredParametersesTable"
        messagesPack="com.company.itpearls.web.screens.requiredparameters">
    <data readOnly="true">
        <collection id="requiredParametersesDc"
                    class="com.company.itpearls.entity.RequiredParameters"
                    view="requiredParameters-view">
            <loader id="requiredParametersesDl">
                <query><![CDATA[select e from itpearls_RequiredParameters e
order by e.number]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="requiredParametersesTable"
            spacing="true">
        <filter id="filter"
                applyTo="requiredParametersesTable"
                dataLoader="requiredParametersesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="requiredParametersesTable"
                    width="100%"
                    dataContainer="requiredParametersesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="parameterName"/>
                <column id="number"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="requiredParametersesTable.create"/>
                <button id="editBtn" action="requiredParametersesTable.edit"/>
                <button id="removeBtn" action="requiredParametersesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
