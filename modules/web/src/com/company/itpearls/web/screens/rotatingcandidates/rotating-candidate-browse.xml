<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://rotatingCandidateBrowse.caption"
        focusComponent="openPositionTable"
        messagesPack="com.company.itpearls.web.screens.rotatingcandidates">
    <data readOnly="true">
        <keyValueCollection id="interactionListDc">
            <loader id="interactionListDl">
                <query>
                    <![CDATA[
                    select e.candidate, count(e.candidate)
                    from itpearls_IteractionList e
                    where e.iteractionType.signEndCase = false
                        or e.iteractionType.signEndCase is not null
                    group by e.candidate
                    order by e.candidate.secondName,e.candidate.firstName]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.recrutier = :recrutier</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>@between(e.dateIteraction, now - :daysBetween, now, day)</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
            <properties>
                <property name="candidate" class="com.company.itpearls.entity.JobCandidate"/>
                <property name="count" datatype="decimal"/>
            </properties>
        </keyValueCollection>
        <collection id="userDc"
                    class="com.haulmont.cuba.security.entity.User"
                    view="_local">
            <loader id="userDl" cacheable="true">
                <query>
                    <![CDATA[select e from sec$User e order by e.name]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.active = :active</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainHBox"
            spacing="true">
        <groupBox caption="msg://msgInterval"
                  collapsable="true"
                  width="100%"
                  height="AUTO"
                  stylename="light">
            <radioButtonGroup id="daysIntervalRadioButtonsGroup"
                              orientation="horizontal"
                              width="AUTO"/>
        </groupBox>
        <label id="candidateCountLabel" stylename="small"/>
        <hbox id="mainHBox"
              spacing="true"
              height="100%"
              width="100%">
            <scrollBox id="labelndidatesScrollBox"
                       orientation="vertical"
                       width="AUTO"
                       stylename="well"
                       height="100%"
                       spacing="true"/>
            <vbox spacing="true"
                  height="AUTO"
                  width="AUTO">
                <label id="candidateNameLabel"
                       stylename="h2"/>
            </vbox>
        </hbox>
        <groupBox caption="msg://msgOptions"
                  collapsable="true"
                  width="100%"
                  height="AUTO"
                  stylename="light">
            <hbox spacing="true">
                <radioButtonGroup id="recruterRadioButtonsGroup"
                                  orientation="horizontal"
                                  width="AUTO"/>
                <lookupPickerField id="recruterLookupPickerField"
                                   width="AUTO"
                                   enable="false"
                                   optionsContainer="userDc"/>
            </hbox>
        </groupBox>
    </layout>
</window>
