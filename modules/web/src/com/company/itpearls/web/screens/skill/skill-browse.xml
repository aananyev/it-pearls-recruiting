<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="skillsTable"
        messagesPack="com.company.itpearls.web.screens.skill">
    <data readOnly="true">
        <collection id="skillsDc"
                    class="com.company.itpearls.entity.Skill"
                    view="skill-view">
            <loader id="skillsDl">
                <query>
                    <![CDATA[select e from itpearls_Skill e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="skillsTable"
            spacing="true">
        <filter id="filter"
                applyTo="skillsTable"
                dataLoader="skillsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="skillsTable"
                    width="100%"
                    dataContainer="skillsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="skillName"/>
                <column id="skillType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="skillsTable.create"/>
                <button id="editBtn" action="skillsTable.edit"/>
                <button id="removeBtn" action="skillsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
