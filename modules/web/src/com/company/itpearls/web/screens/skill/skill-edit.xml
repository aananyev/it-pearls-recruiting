<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.skill">
    <data>
        <instance id="skillDc"
                  class="com.company.itpearls.entity.Skill"
                  view="skill-view">
            <loader/>
        </instance>
        <collection id="skillTypesDc" class="com.company.itpearls.entity.Specialisation" view="_minimal">
            <loader id="skillTypesLc">
                <query>
                    <![CDATA[select e from itpearls_Specialisation e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="skillDc">
            <column width="250px">
                <textField id="skillNameField" property="skillName"/>
                <lookupPickerField id="skillTypeField" optionsContainer="skillTypesDc" property="skillType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
