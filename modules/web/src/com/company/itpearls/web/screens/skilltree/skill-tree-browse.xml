<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="skillTreesTable"
        messagesPack="com.company.itpearls.web.screens.skilltree" icon="CODE_FORK">
    <data readOnly="true">
        <collection id="skillTreesDc"
                    class="com.company.itpearls.entity.SkillTree"
                    view="skillTree-view">
            <loader id="skillTreesDl">
                <query>
                    <![CDATA[select e from itpearls_SkillTree e order by e.skillName]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="skillTreesTable"
            spacing="true">
        <filter id="filter"
                applyTo="skillTreesTable"
                dataLoader="skillTreesDl">
            <properties include=".*"
                        excludeProperties="version,createTs,createdBy,updateTs,updatedBy,deleteTs,deletedBy"/>
        </filter>
        <treeDataGrid id="skillTreesTable"
                      sortable="true"
                      hierarchyColumn="skillName"
                      width="100%"
                      dataContainer="skillTreesDc"
                      hierarchyProperty="skillTree">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
<!--                <column id="fileImageLogo"
                        property="fileImageLogo"
                        maximumWidth="120px"
                        caption="msg://msgSkillLogo">
                    <componentRenderer/>
                </column> -->
                <column id="skillName" property="skillName" caption="mainMsg://msgSkill"/>
                <column id="specialisation" property="specialisation" caption="msg://msgSpecialisation"/>
                <column id="wikiPage" property="wikiPage" maximumWidth="250px" caption="msg://msgWikiPage"/>
                <column id="isComment" caption="msg://msgIsComment" maximumWidth="120px">
                    <iconRenderer/>
                </column>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="skillTreesTable.create"/>
                <button id="editBtn" action="skillTreesTable.edit"/>
                <button id="removeBtn" action="skillTreesTable.remove"/>
            </buttonsPanel>
        </treeDataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
