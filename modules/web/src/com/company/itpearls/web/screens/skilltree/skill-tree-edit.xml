<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.skilltree">
    <data>
        <instance id="skillTreeDc"
                  class="com.company.itpearls.entity.SkillTree"
                  view="skillTree-view">
            <loader/>
            <collection id="skillTreeCandidatesDc" property="candidate"/>
        </instance>
        <collection id="skillTreesDc" class="com.company.itpearls.entity.SkillTree" view="_minimal">
            <loader id="skillTreesLc">
                <query><![CDATA[select e from itpearls_SkillTree e
order by e.skillName]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="skillTreeDc" width="100%">
            <column width="100%">
                <tabSheet>
                    <tab id="tabSkill" caption="msg://msgSkill" margin="true,false,false,false" spacing="true">
                        <groupBox>
                            <textField id="skillNameField" caption="mainMsg://msgSkill"
                                       dataContainer="skillTreeDc" property="skillName"/>
                            <lookupPickerField id="skillTreeField" optionsContainer="skillTreesDc"
                                               caption="mainMsg://msgSkillTree" dataContainer="skillTreeDc"
                                               property="skillTree">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                </actions>
                            </lookupPickerField>
                        </groupBox>
                    </tab>
                    <tab id="tabCandidate" caption="msg://msgCandidate" margin="true,false,false,false" spacing="true">
                        <groupBox spacing="true">
                            <table height="400px" width="100%" dataContainer="skillTreeCandidatesDc">
                                <columns>
                                    <column id="secondName"/>
                                    <column id="firstName"/>
                                    <column id="middleName"/>
                                    <column id="birdhDate"/>
                                    <column id="email"/>
                                    <column id="phone"/>
                                    <column id="skypeName"/>
                                    <column id="telegramName"/>
                                </columns>
                            </table>
                        </groupBox>
                    </tab>
                </tabSheet>
            </column>
        </form>
        <hbox id="editActions" spacing="true" align="TOP_RIGHT">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
