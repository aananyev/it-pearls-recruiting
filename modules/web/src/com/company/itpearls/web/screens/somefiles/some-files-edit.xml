<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.somefiles" icon="COPY">
    <data>
        <instance id="someFilesDc"
                  class="com.company.itpearls.entity.SomeFiles"
                  view="someFiles-view">
            <loader/>
        </instance>
        <collection id="fileOwnersDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="fileOwnersLc">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
        <collection id="fileTypesDc" class="com.company.itpearls.entity.FileType" view="_minimal">
            <loader id="fileTypesLc">
                <query>
                    <![CDATA[select e from itpearls_FileType e]]>
                </query>
            </loader>
        </collection>
        <collection id="candidateCVsDc" class="com.company.itpearls.entity.CandidateCV">
            <view extends="_local">
                <property name="candidate" fetch="JOIN" view="_local">
                    <property name="personPosition" fetch="JOIN" view="_local"/>
                </property>
                <property name="resumePosition" fetch="JOIN" view="_local"/>
                <property name="owner" fetch="JOIN" view="_local"/>
                <property name="originalFileCV" fetch="BATCH" view="_local"/>
            </view>
            <loader id="candidateCVsLc">
                <query>
                    <![CDATA[select e from itpearls_CandidateCV e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="fileCommentField"
            spacing="true">
        <textField id="fileDescriptionField"
                   property="fileDescription"
                   dataContainer="someFilesDc"
                   required="false"
                   width="100%"/>
        <form id="form"
              dataContainer="someFilesDc"
              width="100%">
            <column width="100%">
                <lookupPickerField id="fileTypeField"
                                   optionsContainer="fileTypesDc"
                                   property="fileType"
                                   required="true"
                                   width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="candidateCVField"
                                   optionsContainer="candidateCVsDc"
                                   property="candidateCV"
                                   width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <upload id="fileDescriptorField"
                        fileStoragePutMode="MANUAL"
                        dataContainer="someFilesDc"
                        property="fileDescriptor"
                        width="100%"
                        showFileName="true"/>
                <textField id="fileLinkField"
                           property="fileLink"
                           width="100%"
                           caption="msg://msgFileLink"/>
            </column>
        </form>
        <textArea id="fileCommentField"
                  property="fileComment"
                  dataContainer="someFilesDc"
                  rows="5"
                  height="50%"
                  width="100%"/>
        <lookupPickerField id="fileOwnerField"
                           dataContainer="someFilesDc"
                           optionsContainer="fileOwnersDc"
                           property="fileOwner"
                           required="true" width="50%">
            <actions>
                <action id="lookup"
                        type="picker_lookup"/>
            </actions>
        </lookupPickerField>
        <hbox id="editActions" spacing="true" align="BOTTOM_RIGHT" width="100%">
            <button action="windowCommitAndClose" align="BOTTOM_RIGHT"/>
            <button action="windowClose" align="BOTTOM_RIGHT"/>
        </hbox>
    </layout>
</window>
