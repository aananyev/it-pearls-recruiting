<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.somefiles">
    <data>
        <instance id="someFilesDc"
                  class="com.company.itpearls.entity.SomeFiles"
                  view="someFiles-view">
            <loader/>
        </instance>
        <collection id="fileOwnersDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="fileOwnersLc">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
        <collection id="fileTypesDc" class="com.company.itpearls.entity.FileType" view="_minimal">
            <loader id="fileTypesLc">
                <query>
                    <![CDATA[select e from itpearls_FileType e]]>
                </query>
            </loader>
        </collection>
        <collection id="candidateCVsDc" class="com.company.itpearls.entity.CandidateCV" view="_minimal">
            <loader id="candidateCVsLc">
                <query>
                    <![CDATA[select e from itpearls_CandidateCV e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="someFilesDc" width="100%">
            <column width="100%">
                <textField id="fileDescriptionField" property="fileDescription" required="true" width="100%"/>
                <textField id="fileLinkField" property="fileLink" width="100%"
                           caption="msg://msgFileLink"/>
                <upload id="fileDescriptorField" fileStoragePutMode="IMMEDIATE" property="fileDescriptor"
                        showFileName="true"/>
                <textArea id="fileCommentField" property="fileComment" rows="5" width="100%"/>
                <lookupPickerField id="fileOwnerField" optionsContainer="fileOwnersDc" property="fileOwner"
                                   required="true" width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="fileTypeField" optionsContainer="fileTypesDc" property="fileType"
                                   required="true" width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
                <lookupPickerField id="candidateCVField" optionsContainer="candidateCVsDc" property="candidateCV"
                                   width="50%">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
