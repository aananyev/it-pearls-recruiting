<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.specialisation">
    <data>
        <instance id="specialisationDc"
                  class="com.company.itpearls.entity.Specialisation"
                  view="specialisation-view">
            <loader id="specialisationDl"/>
        </instance>
        <collection id="skillsDc" class="com.company.itpearls.entity.Skill" view="_local">
            <loader id="skillDl">
                <query><![CDATA[select e from itpearls_Skill e
where e.skillType = :Specialisation]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="specialisationDc">
            <column width="250px">
                <textField id="specRuNameField" property="specRuName"/>
                <textField id="specEnNameField" property="specEnName"/>
                <groupBox caption="Skills">
                    <table height="100px" width="100%" dataContainer="skillsDc">
                        <columns>
                            <column id="skillName"/>
                        </columns>
                    </table>
                </groupBox>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
