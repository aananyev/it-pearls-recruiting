<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.itpearls.web.screens.specialisation">
    <data>
        <instance id="specialisationDc"
                  class="com.company.itpearls.entity.Specialisation"
                  view="specialisation-view">
            <loader/>
            <collection id="skillDc" property="skill"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="specialisationDc">
            <column width="250pt">
                <textField id="specRuNameField" property="specRuName"/>
            </column>
        </form>
        <groupBox id="skillBox" caption="msg://com.company.itpearls.entity/Specialisation.skill">
            <table id="skillTable" dataContainer="skillDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="skillName"/>
                </columns>
                <buttonsPanel>
                    <button action="skillTable.create"/>
                    <button action="skillTable.edit"/>
                    <button action="skillTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
