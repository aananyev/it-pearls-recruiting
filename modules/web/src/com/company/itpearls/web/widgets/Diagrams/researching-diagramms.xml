<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data>
    </data>
    <layout height="100%" width="100%">
        <chart:serialChart id="makeInterview"
                           dataDateFormat="DD.MM"
                           balloonDateFormat="dd.MM"
                           categoryField="date"
                           width="100%">
            <chart:valueScrollbar offset="50"
                                  oppositeAxis="false"
                                  scrollbarHeight="10"/>
            <chart:balloon adjustBorderColor="true"
                           color="BLACK"
                           horizontalPadding="10"
                           verticalPadding="10"/>
            <chart:valueAxes>
                <chart:axis gridAlpha="0.07"
                            position="LEFT"
                            stackType="REGULAR"
                            title="Количество организованных собеседований"/>
            </chart:valueAxes>
            <chart:graphs>
                <chart:graph id="interviewGraph"
                             type="COLUMN"
                             fillAlphas="1"
                             balloonColor="PURPLE"
                             color="GREEN"
                             valueField="count"/>
            </chart:graphs>
            <chart:chartCursor cursorAlpha="1"
                               cursorColor="#258cbb"
                               cursorPosition="MOUSE"
                               limitToGraph="g1"
                               pan="true"
                               valueLineAlpha="0.2"
                               valueLineEnabled="true"
                               valueLineBalloonEnabled="true"
                               valueZoomable="true"/>
            <chart:export/>
        </chart:serialChart>
    </layout>
</fragment>
