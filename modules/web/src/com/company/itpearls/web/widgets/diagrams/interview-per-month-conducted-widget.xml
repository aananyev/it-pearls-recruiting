<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <layout width="100%">
        <chart:gaugeChart id="gaugeChart"
                          height="100%"
                          creditsPosition="BOTTOM_RIGHT"
                          width="100%">
            <chart:axes>
                <chart:axis axisAlpha="0.2"
                            axisThickness="1"
                            bottomText="msg://msgInterviewConducted"
                            bottomTextYOffset="-1"
                            endValue="40"
                            tickAlpha="0.2"
                            valueInterval="5">
                    <chart:bands>
                        <chart:band color="#cc4748"
                                    balloonText="Junior"
                                    endValue="10"
                                    startValue="0"/>
                        <chart:band color="#fdd400"
                                    balloonText="Regular"
                                    endValue="20"
                                    startValue="10"/>
                        <chart:band color="#84b761"
                                    balloonText="Master"
                                    endValue="30"
                                    innerRadius="95%"
                                    startValue="20"/>
                        <chart:band color="blue"
                                    balloonText="GrandMaster"
                                    endValue="40"
                                    innerRadius="95%"
                                    startValue="30"/>
                    </chart:bands>
                </chart:axis>
            </chart:axes>
            <chart:arrows>
                <chart:arrow id="arrowArrows" value="60"/>
            </chart:arrows>
            <chart:export/>
        </chart:gaugeChart>
    </layout>
</fragment>
