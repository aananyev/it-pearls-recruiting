<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
    </data>
    <layout stylename="widget-border"
            expand="funnelHuntingWindgetGroupBox"
            spacing="false"
            height="100%"
            width="100%">
        <vbox id="funnelHuntingWindgetGroupBox"
              width="100%"
              expand="boxWidgetTitle"
              spacing="false">
            <cssLayout id="widgetTitleBox"
                       width="100%"
                       height="AUTO"
                       stylename="widget-title">
                <label id="widgetTitle"
                       width="100%"
                       htmlEnabled="false"
                       align="MIDDLE_CENTER"
                       height="100%"/>
            </cssLayout>
            <hbox id="boxWidgetTitle"
                  expand="researcherNameBox"
                  width="100%"
                  height="100%"
                  spacing="false"
                  align="BOTTOM_CENTER">
                <vbox id="researcherNameBox"
                      width="AUTO"
                      height="100%"
                      spacing="false"
                      expand="researcherTitleColumn"
                      align="BOTTOM_LEFT">
                    <cssLayout id="researcherTitleColumn"
                               height="AUTO"
                               stylename="v-caption-label"
                               width="100%">
                        <label id="researcherTitle"
                               width="AUTO"
                               value="Ресерчер"
                               align="BOTTOM_LEFT"
                               height="100%"/>
                    </cssLayout>
                </vbox>
            </hbox>
        </vbox>
    </layout>
</fragment>
