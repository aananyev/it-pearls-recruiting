<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
    </data>
    <layout stylename="widget-border"
            expand="funnelHuntingWindgetGroupBox"
            width="100%">
        <vbox id="funnelHuntingWindgetGroupBox"
              width="100%"
              expand="boxWidgetTitle"
              spacing="false">
            <label id="widgetTitle"
                   htmlEnabled="true"
                   width="100%"
                   height="AUTO"
                   stylename="widget-title"/>
            <hbox id="boxWidgetTitle"
                  expand="researcherNameBox"
                  width="100%"
                  height="100%"
                  spacing="false"
                  align="BOTTOM_CENTER">
                <vbox id="researcherNameBox"
                      expand="researcherList"
                      width="AUTO"
                      spacing="false"
                      align="BOTTOM_LEFT">
                    <hbox id="researcherList"
                          height="45px"
                          expand="researcherTitle"
                          stylename="v-caption-label"
                          width="100%">
                        <label id="researcherTitle"
                               value="Ресерчер"
                               align="BOTTOM_LEFT"
                               stylename="v-caption-label"
                               height="100%"/>
                    </hbox>
                </vbox>
            </hbox>
        </vbox>
    </layout>
</fragment>
