<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
    </data>
    <layout stylename="widget-border"
            expand="funnelHuntingWindgetGroupBox"
            spacing="false"
            width="100%">
        <vbox id="funnelHuntingWindgetGroupBox"
              width="100%"
              expand="boxWidgetTitle"
              spacing="false">
            <hbox id="widgetTitleBox"
                  width="100%"
                  height="AUTO"
                  spacing="false"
                  stylename="widget-title">
                <label id="widgetTitle"
                        width="100%"
                        height="AUTO"
                        stylename="widget-title"/>
            </hbox>
            <hbox id="boxWidgetTitle"
                  expand="researcherNameBox"
                  width="100%"
                  height="100%"
                  spacing="false"
                  align="BOTTOM_CENTER">
                <vbox id="researcherNameBox"
                      expand="researcherList"
                      width="AUTO"
                      height="100%"
                      spacing="false"
                      align="BOTTOM_LEFT">
                    <vbox id="researcherList"
                          height="100%"
                          expand="researcherTitle"
                          align="BOTTOM_LEFT"
                          spacing="false"
                          stylename="v-caption-label"
                          width="100%">
                        <label id="researcherTitle"
                               value="Ресерчер"
                               align="BOTTOM_LEFT"
                               stylename="v-caption-label"
                               height="100%"/>
                    </vbox>
                </vbox>
            </hbox>
        </vbox>
    </layout>
</fragment>
