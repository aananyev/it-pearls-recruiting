<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd">
    <data readOnly="true">
        <collection id="iteractionListDc" class="com.company.itpearls.entity.IteractionList" view="iteractionList-view">
            <loader id="iteractioListDl">
                <query>
                    <![CDATA[select e
                    from itpearls_IteractionList e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>
                                    e.iteractionType.iterationName like :iteractionName
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.dateIteraction between :startDate and :endDate
                                </c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout expand="borderGroupBox"
            width="100%"
            height="100%"
            stylename="widget-border">
        <vbox id="borderGroupBox"
              spacing="true"
              width="100%"
              height="100%"
              expand="box">
            <hbox width="100%"
                  height="AUTO"
                  spacing="false"
                  stylename="widget-title"
                  expand="labelWidgetTitle">
                <label id="labelWidgetTitle"
                       width="AUTO"
                       height="100%"
                       htmlEnabled="false"/>
            </hbox>
            <hbox id="box"
                  spacing="true"
                  width="100%"
                  height="100%"
                  align="MIDDLE_CENTER">
                <vbox spacing="false"
                      width="100%">
                        <hbox stylename="widget-mountly-interview-table-1"
                              expand="labelCountNewContacts"
                              width="100%"
                              height="AUTO">
                                <label id="labelCountNewContacts"
                                       stylename="widget-table-item-title"
                                       width="AUTO"
                                       align="MIDDLE_LEFT"/>
                                <label id="labelCountNewContactsValue"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       align="TOP_RIGHT"/>
                                </hbox>
                        <hbox stylename="widget-mountly-interview-table-2"
                              expand="labelCountProposeJob"
                              width="100%"
                              height="AUTO">
                                <label id="labelCountProposeJob"
                                       width="AUTO"
                                       stylename="widget-table-item-title"
                                       align="TOP_LEFT"/>
                                <label id="labelCountProposeJobValue"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       align="TOP_RIGHT"/>
                            </hbox>
                        <hbox stylename="widget-mountly-interview-table-1"
                              expand="labelAssignInternalInterview"
                              width="100%"
                              height="AUTO">
                                <label id="labelAssignInternalInterview"
                                       width="AUTO"
                                       stylename="widget-table-item-title"
                                       align="TOP_LEFT"/>
                                <label id="labelAssignInternalInterviewValue"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       align="TOP_RIGHT"/>
                            </hbox>
                        <hbox stylename="widget-mountly-interview-table-2"
                              expand="labelPrepareInternalInterview"
                              width="100%"
                              height="100%">
                                <label id="labelPrepareInternalInterview"
                                       width="AUTO"
                                       stylename="widget-table-item-title"
                                       align="TOP_LEFT"/>
                                <label id="labelPrepareInternalInterviewValus"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       align="TOP_RIGHT"/>
                            </hbox>
                        <hbox stylename="widget-mountly-interview-table-1"
                              expand="labelAssignExternalInterview"
                              width="100%"
                              height="100%">
                                <label id="labelAssignExternalInterview"
                                       width="AUTO"
                                       stylename="widget-table-item-title"
                                       align="TOP_LEFT"/>
                                <label id="labelAssignExternalInterviewValue"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       align="TOP_RIGHT"/>
                            </hbox>
                        <hbox stylename="widget-mountly-interview-table-2"
                              expand="labelPrepareExternalInterview"
                              width="100%"
                              height="100%">
                                <label id="labelPrepareExternalInterview"
                                       width="AUTO"
                                       stylename="widget-table-item-title"
                                       align="TOP_LEFT"/>
                                <label id="labelPrepareExternalInterviewValue"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       align="TOP_RIGHT"/>
                            </hbox>
                        <hbox stylename="widget-mountly-interview-table-1"
                              expand="labelDirectorsInterview"
                              width="100%"
                              height="100%">
                                <label id="labelDirectorsInterview"
                                       width="AUTO"
                                       stylename="widget-table-item-title"
                                       align="TOP_LEFT"/>
                                <label id="labelDirectorsInterviewValue"
                                       stylename="widget-table-item-value"
                                       width="AUTO"
                                       htmlEnabled="true"
                                       align="TOP_RIGHT"/>
                    </hbox>
                </vbox>
            </hbox>
        </vbox>
    </layout>
</fragment>
