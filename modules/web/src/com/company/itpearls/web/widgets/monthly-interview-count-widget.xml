<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd">
    <data readOnly="true">
        <collection id="iteractionListDc" class="com.company.itpearls.entity.IteractionList" view="iteractionList-view">
            <loader id="iteractioListDl">
                <query>
                    <![CDATA[select e
                    from itpearls_IteractionList e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>
                                    e.iteractionType.iterationName like :iteractionName
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.dateIteraction between :startDate and :endDate
                                </c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <vbox id="borderGroupBox" spacing="true" width="100%" height="AUTO" stylename="light"
              css="border: 2px solid #7a7b7e;border-radius: 10px; margin: 8px;"
              margin="true,true,true,true"
              icon="ARROW_CIRCLE_RIGHT" expand="box">
            <label id="labelTitle" width="AUTO" htmlEnabled="true" align="MIDDLE_CENTER"/>
            <hbox id="box" spacing="true">
                <grid spacing="true">
                    <columns count="2"/>
                    <rows>
                        <row>
                            <label id="labelCountNewContacts"
                                   width="90%"
                                   stylename="v-caption-shift-field"
                                   htmlEnabled="true"/>
                            <label id="labelCountNewContactsValue"
                                   width="AUTO"
                                   align="MIDDLE_RIGHT"
                                   htmlEnabled="true"/>
                        </row>
                        <row>
                            <label id="labelAssignInternalInterview"
                                   width="90%"
                                   stylename="v-caption-shift-field"
                                   htmlEnabled="true"/>
                            <label id="labelAssignInternalInterviewValue"
                                   width="AUTO"
                                   align="MIDDLE_RIGHT"
                                   htmlEnabled="true"/>
                        </row>
                        <row>
                            <label id="labelPrepareInternalInterview"
                                   width="90%"
                                   stylename="v-caption-shift-field"
                                   htmlEnabled="true"/>
                            <label id="labelPrepareInternalInterviewValus"
                                   width="AUTO"
                                   align="MIDDLE_RIGHT"
                                   htmlEnabled="true"/>
                        </row>
                        <row>
                            <label id="labelAssignExternalInterview"
                                   stylename="v-caption-shift-field"
                                   width="90%"
                                   htmlEnabled="true"/>
                            <label id="labelAssignExternalInterviewValue"
                                   width="AUTO"
                                   align="MIDDLE_RIGHT"
                                   htmlEnabled="true"/>
                        </row>
                        <row>
                            <label id="labelPrepareExternalInterview"
                                   stylename="v-caption-shift-field"
                                   width="90%"
                                   htmlEnabled="true"/>
                            <label id="labelPrepareExternalInterviewValue"
                                   width="AUTO"
                                   align="MIDDLE_RIGHT"
                                   htmlEnabled="true"/>
                        </row>
                        <row>
                            <label id="labelDirectorsInterview"
                                   width="90%"
                                   stylename="v-caption-shift-field"
                                   htmlEnabled="true"
                                   align="MIDDLE_LEFT"/>
                            <label id="labelDirectorsInterviewValue"
                                   width="AUTO"
                                   htmlEnabled="true"
                                   align="MIDDLE_RIGHT"/>
                        </row>
                    </rows>
                </grid>
            </hbox>
        </vbox>
    </layout>
</fragment>
