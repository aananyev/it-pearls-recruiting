<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd">
    <data>
        <collection id="iteractionListDc" class="com.company.itpearls.entity.IteractionList" view="iteractionList-view">
            <loader id="iteractioListDl">
                <query>
                    select e
                    from itpearls_IteractionList e
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>
                                    e.iteractionType.iterationName like :iteractionName
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.dateIteraction between :startDate and :endDate
                                </c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <groupBox spacing="true" width="AUTO">
            <label id="labelTitle" width="AUTO" htmlEnabled="true" align="MIDDLE_CENTER"/>
            <grid spacing="true">
                <columns count="2"/>
                <rows>
                    <row>
                        <label id="labelCountNewContacts"
                               icon="BATTERY_0"
                               width="AUTO"
                               htmlEnabled="true"/>
                        <label id="labelCountNewContactsValue"
                               width="AUTO"
                               align="MIDDLE_RIGHT"
                               htmlEnabled="true"/>
                    </row>
                    <row>
                        <label id="labelAssignInternalInterview"
                               icon="BATTERY_1"
                               width="AUTO"
                               htmlEnabled="true"/>
                        <label id="labelAssignInternalInterviewValue"
                               width="AUTO"
                               align="MIDDLE_RIGHT"
                               htmlEnabled="true"/>
                    </row>
                    <row>
                        <label id="labelPrepareInternalInterview"
                               icon="BATTERY_2"
                               width="AUTO"
                               htmlEnabled="true"/>
                        <label id="labelPrepareInternalInterviewValus"
                               width="AUTO"
                               align="MIDDLE_RIGHT"
                               htmlEnabled="true"/>
                    </row>
                    <row>
                        <label id="labelAssignExternalInterview"
                               icon="BATTERY_3"
                               width="AUTO"
                               htmlEnabled="true"/>
                        <label id="labelAssignExternalInterviewValue"
                               width="AUTO"
                               align="MIDDLE_RIGHT"
                               htmlEnabled="true"/>
                    </row>
                    <row>
                        <label id="labelPrepareExternalInterview"
                               icon="BATTERY_4"
                               width="AUTO"
                               htmlEnabled="true"/>
                        <label id="labelPrepareExternalInterviewValue"
                               width="AUTO"
                               align="MIDDLE_RIGHT"
                               htmlEnabled="true"/>
                    </row>
                    <row>
                        <label id="labelDirectorsInterview"
                               icon="BATTERY_FULL"
                               width="AUTO"
                               htmlEnabled="true"
                               align="MIDDLE_LEFT"/>
                        <label id="labelDirectorsInterviewValue"
                               width="AUTO"
                               htmlEnabled="true"
                               align="MIDDLE_RIGHT"/>
                    </row>
                </rows>
            </grid>
        </groupBox>
    </layout>
</fragment>
