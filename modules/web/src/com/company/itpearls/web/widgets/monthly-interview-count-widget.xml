<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd">
    <data>
        <collection id="iteractionListDc" class="com.company.itpearls.entity.IteractionList" view="iteractionList-view">
            <loader id="iteractioListDl">
                <query>
                    select e
                    from itpearls_IteractionList e
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>
                                    e.iteractionType.iterationName like :iteractionName
                                </c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>
                                    e.dateIteraction between :startDate and :endDate
                                </c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <vbox>
            <groupBox>
                <label id="labelTitle" width="100%" htmlEnabled="true" align="MIDDLE_CENTER"/>
                <hbox>
                    <label id="labelCountNewContacts" icon="BATTERY_0" width="AUTO" htmlEnabled="true"/>
                    <label id="labelCountNewContactsValue" width="AUTO" htmlEnabled="true"/>
                </hbox>
                <hbox>
                    <label id="labelAssignInternalInterview" icon="BATTERY_1" width="100%" htmlEnabled="true"/>
                    <label id="labelAssignInternalInterviewValue" width="100%" htmlEnabled="true"/>
                </hbox>
                <hbox>
                <label id="labelPrepareInternalInterview" icon="BATTERY_2" width="100%" htmlEnabled="true"/>
                    <label id="labelPrepareInternalInterviewValus" width="100%" htmlEnabled="true"/>
                </hbox>
                <hbox>
                    <label id="labelAssignExternalInterview" icon="BATTERY_3" width="100%" htmlEnabled="true"/>
                    <label id="labelAssignExternalInterviewValue" width="100%" htmlEnabled="true"/>
                </hbox>
                <hbox>
                    <label id="labelPrepareExternalInterview" icon="BATTERY_4" width="100%" htmlEnabled="true"/>
                    <label id="labelPrepareExternalInterviewValue" width="100%" htmlEnabled="true"/>
                </hbox>
                <hbox>
                    <label id="labelDirectorsInterview" icon="BATTERY_FULL" width="100%" htmlEnabled="true" align="MIDDLE_LEFT"/>
                    <label id="labelDirectorsInterviewValue" width="100%" htmlEnabled="true" align="MIDDLE_RIGHT"/>
                </hbox>
            </groupBox>
        </vbox>
    </layout>
</fragment>
