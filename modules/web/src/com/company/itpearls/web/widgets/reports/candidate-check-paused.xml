<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd">
    <data readOnly="true">
        <collection id="candidatesPausedDc"
                    class="com.company.itpearls.entity.IteractionList"
                    view="iteractionList-view">
            <loader id="candidatesPausedDl">
                <query><![CDATA[select e from itpearls_IteractionList e
                        order by e.numberIteraction desc]]>
                <condition>
                    <and>
                        <c:jpql>
                            <c:where>
                                e.iteractionType = (select f from itpearls_Iteraction f where f.iterationName like :iteractionName)
                            </c:where>
                        </c:jpql>
                        <c:jpql>
                            <c:where>
                                e.recrutier = :recrutier
                            </c:where>
                        </c:jpql>
                    </and>
                </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout stylename="widget-border"
            spacing="false"
            height="100%"
            width="100%"
            expand="listCandidateInPause">
        <vbox id="listCandidateInPause"
              spacing="false"
              height="100%"
              expand="iteractionInPausedDataGrid"
              width="100%">
            <cssLayout id="widgetTitleBox"
                       width="100%"
                       stylename="widget-table-header"
                       height="AUTO">
                <label id="widgetTitle"
                       width="100%"
                       stylename="widget-table-header"
                       htmlEnabled="false"
                       height="100%"/>
            </cssLayout>
            <dataGrid id="iteractionInPausedDataGrid"

                   dataContainer="candidatesPausedDc"
                   height="100%">
                <columns>
                    <column id="numberIteraction" property="numberIteraction"/>
                    <column id="candidate" property="candidate"/>
                    <column id="iteractionType" property="iteractionType"/>
                    <column id="addDate" property="addDate">
                        <formatter format="dd.MM.yyyy"
                                   class="com.haulmont.cuba.gui.components.formatters.DateFormatter"/>
                    </column>
                </columns>
                <rowsCount/>
            </dataGrid>
        </vbox>
    </layout>
</fragment>
