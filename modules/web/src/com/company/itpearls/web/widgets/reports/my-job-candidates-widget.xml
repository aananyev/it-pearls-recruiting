<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
          xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd">
    <data>
    </data>
    <layout stylename="widget-border"
            expand="funnelHuntingWindgetGroupBox"
            spacing="false"
            height="100%"
            width="100%">
        <vbox id="funnelHuntingWindgetGroupBox"
              width="100%"
              height="100%"
              expand="mainVbox"
              spacing="false">
            <vbox id="widgetTitleBox"
                  width="100%"
                  height="AUTO"
                  spacing="false"
                  stylename="widget-title">
                <label id="widgetTitle"
                       width="100%"
                       htmlEnabled="false"
                       height="AUTO"/>
            </vbox>
            <vbox id="mainVbox"
                  spacing="false"
                  width="100%"
                  height="100%"
                  expand="scrollBox">
                <scrollBox id="scrollBox"
                           width="100%"
                           height="100%"
                           spacing="false"
                           margin="false,false,true,false">
                    <accordion id="jobCandidatesIteractionAccordion"
                               height="100%"
                               width="100%"/>
                </scrollBox>
                <checkBox id="allCandidatesChackBox"
                          caption="msg://msgOnlyMyCandidates"
                          description="msg://msgOnlyMyCandidatesDesc"/>
            </vbox>
        </vbox>
    </layout>
</fragment>
