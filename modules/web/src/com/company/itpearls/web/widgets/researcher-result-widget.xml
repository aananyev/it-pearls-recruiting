<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <collection id="researcherNamesDc" class="com.haulmont.cuba.security.entity.User" view="_minimal">
            <loader id="researcherNamesDl">
                <query>
                    <![CDATA[select e from sec$User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout spacing="true" expand="researcherBox">
        <groupBox id="researcherBox" expand="researcherList" spacing="true">
            <label id="title" align="MIDDLE_CENTER" width="AUTO" htmlEnabled="true"/>
            <dataGrid id="researcherListDataGrid" dataContainer="researcherNamesDc" width="100%" visible="true" height="150px">
                <columns includeAll="true">
                    <column id="login"/>
                </columns>
                <rowsCount/>
            </dataGrid>
            <groupTable id="researcherList" dataContainer="researcherNamesDc" width="100%" visible="true" height="100px">
                <columns includeAll="true">
                    <column id="login"/>
                </columns>
                <rows/>
                <rowsCount/>
            </groupTable>
        </groupBox>
    </layout>
</fragment>
