<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <collection id="researcherNamesDc" class="com.haulmont.cuba.security.entity.User" view="_local">
            <loader id="researcherNamesDl">
                <query>
                    <![CDATA[select e from sec$User e where e.active is true order by e.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <label id="title" align="MIDDLE_CENTER" width="AUTO" htmlEnabled="true"/>
        <groupTable id="researcherList" dataContainer="researcherNamesDc">
            <columns>
                <column id="name"/>
            </columns>
            <rows/>
        </groupTable>
    </layout>
</fragment>
